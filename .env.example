# Shopologic Environment Configuration

# Application
APP_NAME="Shopologic"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_TIMEZONE=UTC

# Database Configuration
# Supported drivers: pgsql, mysql
DB_CONNECTION=pgsql

# PostgreSQL Configuration (when DB_CONNECTION=pgsql)
# DB_HOST=localhost
# DB_PORT=5432
# DB_DATABASE=shopologic
# DB_USERNAME=postgres
# DB_PASSWORD=your_password

# MySQL/MariaDB Configuration (when DB_CONNECTION=mysql)
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=shopologic
# DB_USERNAME=root
# DB_PASSWORD=your_password

# Active Database Settings (update based on your choice)
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=shopologic
DB_USERNAME=shopologic
DB_PASSWORD=your_password
DB_PERSISTENT=false

# Read/Write Split Configuration (optional)
# DB_READ_HOST=
# DB_READ_PORT=
# DB_READ_USERNAME=
# DB_READ_PASSWORD=

# Cache
CACHE_DRIVER=redis
CACHE_PREFIX=shopologic
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Session
SESSION_DRIVER=redis
SESSION_LIFETIME=1440
SESSION_COOKIE_NAME=shopologic_session
SESSION_DOMAIN=
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Queue
QUEUE_DRIVER=redis
QUEUE_DEFAULT=default
QUEUE_RETRY_AFTER=90

# Mail
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Security
JWT_SECRET=your-256-bit-secret
JWT_EXPIRY=3600
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=base64:your-32-byte-key

# Storage
STORAGE_DRIVER=local
STORAGE_PATH=storage
CDN_URL=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# Payment Gateways
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# Shipping
FEDEX_ACCOUNT_NUMBER=
FEDEX_METER_NUMBER=
FEDEX_API_KEY=
FEDEX_SECRET_KEY=
FEDEX_MODE=test

UPS_ACCESS_KEY=
UPS_USERNAME=
UPS_PASSWORD=
UPS_ACCOUNT_NUMBER=
UPS_MODE=test

# Search
SEARCH_DRIVER=internal
ELASTICSEARCH_HOST=localhost:9200
ELASTICSEARCH_INDEX=shopologic

# Analytics
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=
ANALYTICS_ENABLED=true

# Social Login
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# Multi-store
MULTISTORE_ENABLED=false
MULTISTORE_DETECTION=domain

# Performance
OPCACHE_ENABLED=true
CACHE_QUERIES=true
CACHE_VIEWS=true
MINIFY_HTML=true
MINIFY_CSS=true
MINIFY_JS=true

# Monitoring
SENTRY_DSN=
LOG_LEVEL=error
PERFORMANCE_MONITORING=true

# Admin
ADMIN_PATH=admin
ADMIN_2FA_ENABLED=true
ADMIN_SESSION_LIFETIME=480
ADMIN_IP_WHITELIST=

# API
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600
GRAPHQL_ENABLED=true
GRAPHQL_INTROSPECTION=false
GRAPHQL_PLAYGROUND=false

# Localization
DEFAULT_LOCALE=en
DEFAULT_CURRENCY=USD
CURRENCY_AUTO_UPDATE=true
CURRENCY_API_KEY=

# SEO
SITEMAP_ENABLED=true
ROBOTS_TXT_ENABLED=true
META_TAGS_AUTO=true
STRUCTURED_DATA_ENABLED=true

# Features
WISHLIST_ENABLED=true
REVIEWS_ENABLED=true
COMPARE_ENABLED=true
NEWSLETTER_ENABLED=true
BLOG_ENABLED=true
PAGES_ENABLED=true

# Backup & Recovery
BACKUP_STORAGE=local
BACKUP_S3_ENABLED=false
BACKUP_FTP_ENABLED=false
BACKUP_FTP_HOST=
BACKUP_FTP_USERNAME=
BACKUP_FTP_PASSWORD=
BACKUP_FTP_PORT=21
BACKUP_FTP_SSL=false
BACKUP_FTP_PATH=/backups

BACKUP_RETENTION_DAYS=30
BACKUP_RETENTION_COUNT=10

BACKUP_ENCRYPTION_ENABLED=true
BACKUP_COMPRESSION_ENABLED=true
BACKUP_COMPRESSION_FORMAT=tar.gz
BACKUP_COMPRESSION_LEVEL=6

BACKUP_NOTIFICATIONS_ENABLED=true
BACKUP_NOTIFY_SUCCESS=false
BACKUP_NOTIFY_FAILURE=true
BACKUP_EMAIL=admin@your-domain.com

BACKUP_DAILY_ENABLED=true
BACKUP_DAILY_TIME=02:00
BACKUP_WEEKLY_ENABLED=true
BACKUP_WEEKLY_DAY=sunday
BACKUP_WEEKLY_TIME=03:00
BACKUP_MONTHLY_ENABLED=false
BACKUP_MONTHLY_DAY=1
BACKUP_MONTHLY_TIME=04:00

AWS_BACKUP_BUCKET=
AWS_BACKUP_PATH=shopologic-backups