# Application Environment Configuration
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=Shopologic
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:17000
APP_KEY=

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=shopologic
DB_USERNAME=shopologic
DB_PASSWORD=

# Database Read Replica (optional)
DB_READ_HOST=
DB_READ_PORT=5432

# Cache Configuration
CACHE_DRIVER=file
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Session Configuration
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@shopologic.com
MAIL_FROM_NAME="${APP_NAME}"

# Queue Configuration
QUEUE_CONNECTION=sync
QUEUE_WORKERS=4

# Storage Configuration
STORAGE_DRIVER=local
STORAGE_PATH=storage

# Plugin Configuration
PLUGIN_CACHE=true
PLUGIN_AUTO_DISCOVERY=true

# Security Settings
SECURITY_CSRF=true
SECURITY_RATE_LIMIT=60
SECURITY_RATE_LIMIT_WINDOW=60

# API Configuration
API_RATE_LIMIT=120
API_VERSION=v1
API_PREFIX=/api

# Multi-Store Configuration
MULTISTORE_ENABLED=false
DEFAULT_STORE_ID=1

# Internationalization
DEFAULT_LOCALE=en
FALLBACK_LOCALE=en
SUPPORTED_LOCALES=en,es,fr,de

# Performance Settings
PERFORMANCE_CACHE_ROUTES=true
PERFORMANCE_CACHE_CONFIG=true
PERFORMANCE_CACHE_VIEWS=true
PERFORMANCE_MONITORING=true

# Development Settings (only in development)
DEV_SHOW_ERRORS=true
DEV_SHOW_QUERIES=false
DEV_PROFILER=true

# Configuration Overrides (optional)
# Format: CONFIG_FILE_KEY=value
# Example: CONFIG_DATABASE_CONNECTIONS_MYSQL_HOST=localhost