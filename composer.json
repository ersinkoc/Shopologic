{
    "name": "shopologic/shopologic",
    "description": "Enterprise-grade, self-contained e-commerce platform built with pure PHP",
    "type": "project",
    "keywords": [
        "ecommerce",
        "php",
        "zero-dependency",
        "enterprise",
        "self-contained",
        "microkernel",
        "psr"
    ],
    "homepage": "https://github.com/shopologic/shopologic",
    "license": "MIT",
    "authors": [
        {
            "name": "Shopologic Team",
            "email": "team@shopologic.com",
            "homepage": "https://shopologic.com"
        }
    ],
    "require": {
        "php": ">=8.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "psalm/plugin-phpunit": "^0.18",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Shopologic\\Core\\": "core/src/",
            "Shopologic\\Plugins\\": "plugins/"
        },
        "files": [
            "core/src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Shopologic\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "post-install-cmd": [
            "@php cli/install.php"
        ],
        "post-update-cmd": [
            "@php cli/migrate.php up"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "shopologic": {
            "dont-discover": []
        }
    }
}