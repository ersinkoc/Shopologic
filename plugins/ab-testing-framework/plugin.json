{
    "name": "A/B Testing Framework",
    "version": "1.0.0",
    "description": "Built-in experimentation platform for testing pricing, layouts, features, and conversion optimization",
    "author": {
        "name": "Shopologic Team",
        "email": "plugins@shopologic.com"
    },
    "class": "ABTestingFramework\\ABTestingFrameworkPlugin",
    "file": "ABTestingFrameworkPlugin.php",
    "dependencies": {
        "core-commerce": ">=1.0.0"
    },
    "permissions": [
        "experiments.manage",
        "analytics.read",
        "customers.read",
        "hooks.*"
    ],
    "hooks": [
        "page.rendered",
        "order.completed",
        "experiment.variant_shown",
        "admin.experiments.dashboard"
    ],
    "api_endpoints": [
        "POST /api/v1/experiments/create",
        "GET /api/v1/experiments/{id}/results",
        "POST /api/v1/experiments/{id}/variants",
        "POST /api/v1/experiments/{id}/start",
        "POST /api/v1/experiments/{id}/stop"
    ],
    "database_tables": [
        "experiments",
        "experiment_variants",
        "experiment_participants",
        "experiment_conversions",
        "experiment_results"
    ],
    "config_schema": {
        "enable_auto_experiments": {
            "type": "boolean",
            "default": false,
            "description": "Enable automatic experiment suggestions"
        },
        "default_traffic_split": {
            "type": "number",
            "default": 50,
            "min": 10,
            "max": 90,
            "description": "Default traffic percentage for experiments"
        },
        "significance_threshold": {
            "type": "number",
            "default": 0.95,
            "min": 0.90,
            "max": 0.99,
            "step": 0.01,
            "description": "Statistical significance threshold"
        },
        "min_sample_size": {
            "type": "number",
            "default": 100,
            "min": 50,
            "max": 10000,
            "description": "Minimum sample size for valid results"
        },
        "max_concurrent_experiments": {
            "type": "number",
            "default": 3,
            "min": 1,
            "max": 10,
            "description": "Maximum concurrent experiments"
        }
    },
    "assets": {
        "js": ["assets/experiment-engine.js", "assets/variant-loader.js"],
        "css": ["assets/ab-testing.css"]
    }
}