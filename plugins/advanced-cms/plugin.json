{
    "name": "advanced-cms",
    "version": "1.0.0",
    "description": "Advanced content management with AI writing assistance, SEO optimization, multi-language support, and dynamic content personalization",
    "author": {
        "name": "Shopologic"
    },
    "requirements": {
        "php": ">=8.3",
        "core": ">=1.0.0",
        "dependencies": {
            "shopologic/core": "^1.0"
        }
    },
    "autoload": {
        "psr-4": {
            "Shopologic\\Plugins\\AdvancedCms\\": "src/"
        }
    },
    "bootstrap": {
        "class": "AdvancedCmsPlugin",
        "file": "AdvancedCmsPlugin.php"
    },
    "permissions": [
        "hooks.content.*",
        "hooks.seo.*",
        "api.access",
        "dashboard.widget",
        "cron.execute",
        "content.create",
        "content.publish"
    ],
    "hooks": {
        "actions": [
            "content.created",
            "content.published",
            "seo.optimized",
            "content.personalized",
            "translation.generated"
        ]
    },
    "api": {
        "endpoints": [
            {
                "method": "GET",
                "path": "/api/v1/cms/content",
                "handler": "handleGet"
            },
            {
                "method": "POST",
                "path": "/api/v1/cms/content",
                "handler": "handlePost"
            },
            {
                "method": "POST",
                "path": "/api/v1/cms/ai-generate",
                "handler": "handlePost"
            },
            {
                "method": "POST",
                "path": "/api/v1/cms/seo-optimize",
                "handler": "handlePost"
            },
            {
                "method": "GET",
                "path": "/api/v1/cms/analytics",
                "handler": "handleGet"
            }
        ]
    },
    "config": {
        "schema": {
            "configurable": {
                "type": "boolean",
                "default": true
            },
            "api_enabled": {
                "type": "boolean",
                "default": true
            },
            "widget_enabled": {
                "type": "boolean",
                "default": true
            },
            "features": [
                "ai_writing",
                "seo_optimization",
                "multilingual",
                "personalization"
            ],
            "content_types": [
                "page",
                "blog",
                "product_description",
                "landing_page"
            ]
        }
    },
    "scheduled_tasks": [
        "0 * * * * - optimize_content_seo",
        "0 2 * * * - generate_content_analytics",
        "0 */6 * * * - update_content_scores",
        "0 3 * * SUN - cleanup_old_revisions"
    ],
    "license": "MIT",
    "homepage": "https://shopologic.com/plugins/advanced-cms"
}