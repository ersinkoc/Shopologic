{
    "name": "advanced-inventory-intelligence",
    "version": "1.0.0",
    "description": "AI-powered inventory management with demand forecasting, automated reordering, stockout prevention, and supplier optimization",
    "author": {
        "name": "Shopologic"
    },
    "requirements": {
        "php": ">=8.3",
        "core": ">=1.0.0",
        "dependencies": {
            "shopologic/core": "^1.0"
        }
    },
    "autoload": {
        "psr-4": {
            "Shopologic\\Plugins\\AdvancedInventoryIntelligence\\": "src/"
        }
    },
    "bootstrap": {
        "class": "AdvancedInventoryIntelligencePlugin",
        "file": "AdvancedInventoryIntelligencePlugin.php"
    },
    "permissions": [
        "hooks.inventory.*",
        "hooks.order.*",
        "hooks.supplier.*",
        "api.access",
        "dashboard.widget",
        "cron.execute",
        "inventory.forecast",
        "inventory.optimize"
    ],
    "hooks": {
        "actions": [
            "inventory.level_changed",
            "order.completed",
            "product.demand_spike",
            "supplier.performance_updated",
            "forecast.generated"
        ]
    },
    "api": {
        "endpoints": [
            {
                "method": "GET",
                "path": "/api/v1/inventory/forecast",
                "handler": "handleGet"
            },
            {
                "method": "POST",
                "path": "/api/v1/inventory/optimize",
                "handler": "handlePost"
            },
            {
                "method": "GET",
                "path": "/api/v1/inventory/analytics",
                "handler": "handleGet"
            },
            {
                "method": "POST",
                "path": "/api/v1/inventory/reorder",
                "handler": "handlePost"
            },
            {
                "method": "GET",
                "path": "/api/v1/suppliers/performance",
                "handler": "handleGet"
            }
        ]
    },
    "config": {
        "schema": {
            "configurable": {
                "type": "boolean",
                "default": true
            },
            "api_enabled": {
                "type": "boolean",
                "default": true
            },
            "widget_enabled": {
                "type": "boolean",
                "default": true
            },
            "features": [
                "demand_forecasting",
                "automated_reordering",
                "supplier_optimization",
                "multi_location"
            ],
            "algorithms": [
                "neural_networks",
                "time_series",
                "machine_learning"
            ]
        }
    },
    "scheduled_tasks": [
        "0 */6 * * * - update_demand_forecasts",
        "0 1 * * * - process_automated_reorders",
        "0 */2 * * * - optimize_inventory_levels",
        "0 3 * * * - analyze_supplier_performance"
    ],
    "license": "MIT",
    "homepage": "https://shopologic.com/plugins/advanced-inventory-intelligence"
}