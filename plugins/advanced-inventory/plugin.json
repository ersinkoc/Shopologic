{
    "name": "Advanced Inventory Management",
    "version": "1.0.0",
    "description": "Enterprise-grade inventory management with multi-location warehouses, stock tracking, automated reordering, supplier integration, and real-time analytics",
    "author": {
        "name": "Shopologic Team",
        "email": "plugins@shopologic.com",
        "url": "https:\/\/shopologic.com"
    },
    "license": "MIT",
    "homepage": "https:\/\/shopologic.com\/plugins\/advanced-inventory",
    "keywords": [
        "inventory",
        "warehouse",
        "stock",
        "supplier",
        "reorder",
        "tracking",
        "analytics",
        "barcode"
    ],
    "requirements": {
        "php": ">=8.3",
        "core": ">=1.0.0",
        "dependencies": {
            "shopologic\/commerce": "^1.0.0",
            "shopologic\/analytics": "^1.0.0"
        }
    },
    "autoload": {
        "psr-4": {
            "Shopologic\\Plugins\\AdvancedInventory\\": "src\/"
        }
    },
    "bootstrap": {
        "class": "AdvancedInventoryPlugin",
        "file": "src\/AdvancedInventoryPlugin.php"
    },
    "provides": [
        "InventoryManagerInterface",
        "WarehouseManagerInterface",
        "SupplierManagerInterface",
        "StockTrackerInterface",
        "ReorderEngineInterface"
    ],
    "permissions": [
        "inventory.view",
        "inventory.manage",
        "inventory.transfer",
        "inventory.adjust",
        "warehouse.manage",
        "supplier.manage",
        "reorder.configure",
        "analytics.view"
    ],
    "hooks": {
        "actions": [
            {
                "hook": "order.created",
                "handler": "handleOrderCreated",
                "priority": 10
            },
            {
                "hook": "product.updated",
                "handler": "handleProductUpdated",
                "priority": 10
            },
            {
                "hook": "payment.completed",
                "handler": "reserveInventory",
                "priority": 5
            },
            {
                "hook": "shipment.created",
                "handler": "reduceInventory",
                "priority": 5
            }
        ],
        "filters": [
            {
                "hook": "product.stock_status",
                "handler": "filterStockStatus",
                "priority": 10
            },
            {
                "hook": "checkout.validation",
                "handler": "validateInventoryAvailability",
                "priority": 15
            }
        ]
    },
    "api": {
        "endpoints": [
            {
                "method": "GET",
                "path": "\/api\/v1\/inventory\/items",
                "handler": "InventoryController@index",
                "auth": true,
                "permission": "inventory.view"
            },
            {
                "method": "GET",
                "path": "\/api\/v1\/inventory\/items\/{id}",
                "handler": "InventoryController@show",
                "auth": true,
                "permission": "inventory.view"
            },
            {
                "method": "POST",
                "path": "\/api\/v1\/inventory\/adjustments",
                "handler": "AdjustmentController@create",
                "auth": true,
                "permission": "inventory.adjust"
            },
            {
                "method": "POST",
                "path": "\/api\/v1\/inventory\/transfers",
                "handler": "TransferController@create",
                "auth": true,
                "permission": "inventory.transfer"
            },
            {
                "method": "GET",
                "path": "\/api\/v1\/warehouses",
                "handler": "WarehouseController@index",
                "auth": true,
                "permission": "warehouse.manage"
            },
            {
                "method": "POST",
                "path": "\/api\/v1\/warehouses",
                "handler": "WarehouseController@create",
                "auth": true,
                "permission": "warehouse.manage"
            },
            {
                "method": "GET",
                "path": "\/api\/v1\/suppliers",
                "handler": "SupplierController@index",
                "auth": true,
                "permission": "supplier.manage"
            },
            {
                "method": "POST",
                "path": "\/api\/v1\/suppliers",
                "handler": "SupplierController@create",
                "auth": true,
                "permission": "supplier.manage"
            },
            {
                "method": "POST",
                "path": "\/api\/v1\/purchase-orders",
                "handler": "PurchaseOrderController@create",
                "auth": true,
                "permission": "supplier.manage"
            },
            {
                "method": "GET",
                "path": "\/api\/v1\/inventory\/analytics",
                "handler": "AnalyticsController@dashboard",
                "auth": true,
                "permission": "analytics.view"
            },
            {
                "method": "GET",
                "path": "\/api\/v1\/inventory\/low-stock",
                "handler": "AlertController@lowStock",
                "auth": true,
                "permission": "inventory.view"
            },
            {
                "method": "POST",
                "path": "\/api\/v1\/inventory\/reorder\/{id}",
                "handler": "ReorderController@trigger",
                "auth": true,
                "permission": "reorder.configure"
            }
        ]
    },
    "database": {
        "tables": [
            "inventory_items",
            "inventory_locations",
            "inventory_movements",
            "inventory_adjustments",
            "inventory_transfers",
            "warehouses",
            "warehouse_locations",
            "suppliers",
            "supplier_products",
            "purchase_orders",
            "purchase_order_items",
            "reorder_rules",
            "inventory_alerts",
            "stock_reservations"
        ],
        "migrations": "migrations\/"
    },
    "assets": {
        "js": [
            {
                "src": "assets\/js\/inventory-dashboard.js",
                "position": "footer",
                "pages": [
                    "admin"
                ],
                "deps": [
                    "chart.js",
                    "barcode-scanner"
                ]
            },
            {
                "src": "assets\/js\/warehouse-manager.js",
                "position": "footer",
                "pages": [
                    "admin"
                ]
            },
            {
                "src": "assets\/js\/barcode-scanner.js",
                "position": "footer",
                "pages": [
                    "admin"
                ]
            },
            {
                "src": "assets\/js\/stock-alerts.js",
                "position": "footer",
                "pages": [
                    "admin"
                ]
            }
        ],
        "css": [
            {
                "src": "assets\/css\/inventory-dashboard.css",
                "pages": [
                    "admin"
                ]
            },
            {
                "src": "assets\/css\/warehouse-layout.css",
                "pages": [
                    "admin"
                ]
            }
        ]
    },
    "config": {
        "schema": {
            "default_warehouse": {
                "type": "select",
                "label": "Default Warehouse",
                "required": true,
                "data_source": "warehouses"
            },
            "stock_tracking_method": {
                "type": "select",
                "label": "Stock Tracking Method",
                "options": {
                    "fifo": "First In, First Out (FIFO)",
                    "lifo": "Last In, First Out (LIFO)",
                    "weighted_average": "Weighted Average",
                    "specific_identification": "Specific Identification"
                },
                "default": "fifo"
            },
            "low_stock_threshold": {
                "type": "number",
                "label": "Default Low Stock Threshold",
                "default": 10,
                "min": 0,
                "max": 10000
            },
            "auto_reorder_enabled": {
                "type": "boolean",
                "label": "Enable Automatic Reordering",
                "default": true
            },
            "reorder_lead_time_days": {
                "type": "number",
                "label": "Default Lead Time (Days)",
                "default": 7,
                "min": 1,
                "max": 365
            },
            "barcode_generation": {
                "type": "object",
                "label": "Barcode Settings",
                "properties": {
                    "enabled": {
                        "type": "boolean",
                        "default": true
                    },
                    "format": {
                        "type": "select",
                        "options": {
                            "code128": "Code 128",
                            "ean13": "EAN-13",
                            "upc": "UPC-A",
                            "qr": "QR Code"
                        },
                        "default": "code128"
                    },
                    "auto_generate": {
                        "type": "boolean",
                        "label": "Auto-generate for new products",
                        "default": true
                    }
                }
            },
            "reservation_settings": {
                "type": "object",
                "label": "Stock Reservation",
                "properties": {
                    "reserve_on_order": {
                        "type": "boolean",
                        "label": "Reserve stock on order creation",
                        "default": true
                    },
                    "reservation_timeout": {
                        "type": "number",
                        "label": "Reservation timeout (minutes)",
                        "default": 30,
                        "min": 5,
                        "max": 1440
                    }
                }
            },
            "notification_settings": {
                "type": "object",
                "label": "Notifications",
                "properties": {
                    "low_stock_alerts": {
                        "type": "boolean",
                        "default": true
                    },
                    "out_of_stock_alerts": {
                        "type": "boolean",
                        "default": true
                    },
                    "overstock_alerts": {
                        "type": "boolean",
                        "default": false
                    },
                    "delivery_alerts": {
                        "type": "boolean",
                        "default": true
                    }
                }
            },
            "analytics_settings": {
                "type": "object",
                "label": "Analytics Configuration",
                "properties": {
                    "track_movements": {
                        "type": "boolean",
                        "default": true
                    },
                    "forecasting_enabled": {
                        "type": "boolean",
                        "default": true
                    },
                    "demand_planning": {
                        "type": "boolean",
                        "default": true
                    }
                }
            }
        }
    },
    "widgets": [
        {
            "id": "inventory_overview",
            "name": "Inventory Overview",
            "description": "Stock levels and key metrics",
            "position": "dashboard",
            "permissions": [
                "inventory.view"
            ]
        },
        {
            "id": "low_stock_alerts",
            "name": "Low Stock Alerts",
            "description": "Items requiring attention",
            "position": "sidebar",
            "permissions": [
                "inventory.view"
            ]
        },
        {
            "id": "recent_movements",
            "name": "Recent Stock Movements",
            "description": "Latest inventory transactions",
            "position": "dashboard",
            "permissions": [
                "inventory.view"
            ]
        }
    ],
    "scheduled_tasks": [
        {
            "schedule": "*\/15 * * * *",
            "handler": "processReorderRules",
            "description": "Check and process automatic reorder rules"
        },
        {
            "schedule": "0 * * * *",
            "handler": "generateStockAlerts",
            "description": "Generate low\/out of stock alerts"
        },
        {
            "schedule": "0 2 * * *",
            "handler": "optimizeInventoryLevels",
            "description": "Analyze and optimize inventory levels"
        },
        {
            "schedule": "*\/5 * * * *",
            "handler": "releaseExpiredReservations",
            "description": "Release expired stock reservations"
        }
    ],
    "menu_items": [
        {
            "title": "Inventory",
            "capability": "inventory.view",
            "icon": "dashicons-archive",
            "position": 25,
            "submenu": [
                {
                    "title": "All Items",
                    "page": "inventory-items",
                    "capability": "inventory.view"
                },
                {
                    "title": "Warehouses",
                    "page": "warehouses",
                    "capability": "warehouse.manage"
                },
                {
                    "title": "Suppliers",
                    "page": "suppliers",
                    "capability": "supplier.manage"
                },
                {
                    "title": "Purchase Orders",
                    "page": "purchase-orders",
                    "capability": "supplier.manage"
                },
                {
                    "title": "Stock Movements",
                    "page": "stock-movements",
                    "capability": "inventory.view"
                },
                {
                    "title": "Analytics",
                    "page": "inventory-analytics",
                    "capability": "analytics.view"
                },
                {
                    "title": "Settings",
                    "page": "inventory-settings",
                    "capability": "inventory.manage"
                }
            ]
        }
    ],
    "changelog": {
        "1.0.0": [
            "Initial release with core inventory management",
            "Multi-warehouse support",
            "Supplier management and purchase orders",
            "Automated reorder rules",
            "Real-time stock tracking",
            "Barcode generation and scanning",
            "Comprehensive analytics and reporting",
            "Stock reservation system",
            "Integration with order management"
        ]
    }
}