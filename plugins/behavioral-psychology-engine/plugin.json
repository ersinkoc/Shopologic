{
    "name": "behavioral-psychology-engine",
    "version": "1.0.0",
    "description": "Advanced behavioral psychology system using urgency triggers, social proof automation, and cognitive bias application for conversion optimization",
    "author": {
        "name": "Shopologic"
    },
    "requirements": {
        "php": ">=8.3",
        "core": ">=1.0.0",
        "dependencies": {
            "shopologic/core": "^1.0"
        }
    },
    "autoload": {
        "psr-4": {
            "Shopologic\\Plugins\\BehavioralPsychologyEngine\\": "src/"
        }
    },
    "bootstrap": {
        "class": "BehavioralPsychologyEnginePlugin",
        "file": "BehavioralPsychologyEnginePlugin.php"
    },
    "permissions": [
        "hooks.page.*",
        "hooks.product.*",
        "hooks.cart.*",
        "hooks.checkout.*",
        "api.access",
        "dashboard.widget",
        "cron.execute",
        "psychology.triggers.manage",
        "psychology.campaigns.create"
    ],
    "hooks": {
        "actions": [
            "page.product_view",
            "cart.item_added",
            "checkout.initiated",
            "user.behavior_tracked",
            "conversion.opportunity_detected"
        ]
    },
    "api": {
        "endpoints": [
            {
                "method": "GET",
                "path": "/api/v1/psychology/triggers/active",
                "handler": "handleGet"
            },
            {
                "method": "POST",
                "path": "/api/v1/psychology/triggers/create",
                "handler": "handlePost"
            },
            {
                "method": "GET",
                "path": "/api/v1/psychology/campaigns/{campaign_id}",
                "handler": "handleGet"
            },
            {
                "method": "POST",
                "path": "/api/v1/psychology/personalize",
                "handler": "handlePost"
            },
            {
                "method": "GET",
                "path": "/api/v1/psychology/analytics",
                "handler": "handleGet"
            }
        ]
    },
    "config": {
        "schema": {
            "configurable": {
                "type": "boolean",
                "default": true
            },
            "api_enabled": {
                "type": "boolean",
                "default": true
            },
            "widget_enabled": {
                "type": "boolean",
                "default": true
            },
            "trigger_types": [
                "urgency",
                "scarcity",
                "social_proof",
                "authority",
                "reciprocity"
            ],
            "real_time_personalization": {
                "type": "boolean",
                "default": true
            }
        }
    },
    "scheduled_tasks": [
        "*/30 * * * * - update_social_proof",
        "0 */4 * * * - analyze_trigger_effectiveness",
        "0 2 * * * - optimize_campaigns",
        "0 1 * * MON - generate_psychology_reports"
    ],
    "license": "MIT",
    "homepage": "https://shopologic.com/plugins/behavioral-psychology-engine"
}