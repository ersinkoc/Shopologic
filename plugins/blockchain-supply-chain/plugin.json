{
    "name": "blockchain-supply-chain",
    "version": "1.0.0",
    "description": "Blockchain-based supply chain tracking with product authentication, transparency ledger, and anti-counterfeiting features",
    "author": {
        "name": "Shopologic"
    },
    "requirements": {
        "php": ">=8.3",
        "core": ">=1.0.0",
        "dependencies": {
            "shopologic/core": "^1.0"
        }
    },
    "autoload": {
        "psr-4": {
            "Shopologic\\Plugins\\BlockchainSupplyChain\\": "src/"
        }
    },
    "bootstrap": {
        "class": "BlockchainSupplyChainPlugin",
        "file": "BlockchainSupplyChainPlugin.php"
    },
    "permissions": [
        "hooks.product.*",
        "hooks.order.*",
        "api.access",
        "dashboard.widget",
        "cron.execute",
        "blockchain.verify",
        "blockchain.track"
    ],
    "hooks": {
        "actions": [
            "product.manufactured",
            "product.shipped",
            "product.received",
            "order.verified",
            "supply.chain.updated"
        ]
    },
    "api": {
        "endpoints": [
            {
                "method": "GET",
                "path": "/api/v1/blockchain/verify/{product_id}",
                "handler": "handleGet"
            },
            {
                "method": "POST",
                "path": "/api/v1/blockchain/track",
                "handler": "handlePost"
            },
            {
                "method": "GET",
                "path": "/api/v1/blockchain/history/{product_id}",
                "handler": "handleGet"
            },
            {
                "method": "GET",
                "path": "/api/v1/blockchain/certificate/{hash}",
                "handler": "handleGet"
            },
            {
                "method": "POST",
                "path": "/api/v1/blockchain/report-counterfeit",
                "handler": "handlePost"
            }
        ]
    },
    "config": {
        "schema": {
            "configurable": {
                "type": "boolean",
                "default": true
            },
            "api_enabled": {
                "type": "boolean",
                "default": true
            },
            "widget_enabled": {
                "type": "boolean",
                "default": true
            },
            "blockchain_networks": [
                "ethereum",
                "polygon",
                "private"
            ],
            "verification_levels": [
                "basic",
                "enhanced",
                "premium"
            ]
        }
    },
    "scheduled_tasks": [
        "*/10 * * * * - sync_blockchain",
        "0 * * * * - verify_transactions",
        "0 2 * * * - generate_certificates",
        "0 4 * * * - audit_supply_chain"
    ],
    "license": "MIT",
    "homepage": "https://shopologic.com/plugins/blockchain-supply-chain"
}