{
    "name": "Smart Bundle Builder",
    "version": "1.0.0",
    "description": "Intelligent product bundling with dynamic discounts, cross-sell suggestions, and bundle analytics",
    "author": {
        "name": "Shopologic Team",
        "email": "plugins@shopologic.com"
    },
    "requirements": {
        "php": ">=8.3",
        "core": ">=1.0.0",
        "dependencies": {
            "shopologic/commerce": "^1.0.0"
        }
    },
    "bootstrap": {
        "class": "BundleBuilderPlugin",
        "file": "BundleBuilderPlugin.php"
    },
    "permissions": [
        "products.read",
        "products.write",
        "orders.read",
        "hooks.*"
    ],
    "hooks": {
        "actions": [
            "product.display",
            "cart.updated",
            "admin.product.form"
        ]
    },
    "api": {
        "endpoints": [
            {
                "method": "GET",
                "path": "/api/v1/bundles/suggestions/{product_id}",
                "handler": "handleGet"
            },
            {
                "method": "POST",
                "path": "/api/v1/bundles/create",
                "handler": "handlePost"
            },
            {
                "method": "GET",
                "path": "/api/v1/bundles/analytics",
                "handler": "handleGet"
            }
        ]
    },
    "database": {
        "tables": [
            "product_bundles",
            "bundle_items",
            "bundle_analytics"
        ],
        "migrations": "migrations/"
    },
    "assets": {
        "js": [
            "assets/bundle-builder.js"
        ],
        "css": [
            "assets/bundle-styles.css"
        ]
    },
    "config": {
        "schema": {
            "auto_suggest_bundles": {
                "type": "boolean",
                "default": true,
                "description": "Automatically suggest bundles based on purchase patterns"
            },
            "bundle_discount_percentage": {
                "type": "number",
                "default": 10,
                "min": 5,
                "max": 50,
                "description": "Default bundle discount percentage"
            },
            "min_bundle_items": {
                "type": "number",
                "default": 2,
                "min": 2,
                "max": 10,
                "description": "Minimum items required for a bundle"
            }
        }
    },
    "autoload": {
        "psr-4": {
            "Shopologic\\Plugins\\BundleBuilder\\": "src/"
        }
    },
    "license": "MIT",
    "homepage": "https://shopologic.com/plugins/bundle-builder"
}