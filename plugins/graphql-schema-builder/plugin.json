{
    "name": "graphql-schema-builder",
    "version": "1.0.0",
    "description": "Visual GraphQL schema builder with type generation, resolver mapping, real-time playground, subscription support, schema stitching, and automatic REST to GraphQL conversion",
    "author": {
        "name": "Shopologic Team",
        "email": "dev@shopologic.com",
        "url": "https:\/\/shopologic.com"
    },
    "license": "MIT",
    "homepage": "https:\/\/shopologic.com\/plugins\/graphql-schema-builder",
    "keywords": [
        "graphql",
        "schema",
        "builder",
        "api",
        "types",
        "resolvers",
        "playground",
        "subscriptions"
    ],
    "requirements": {
        "php": ">=8.3",
        "core": ">=1.0.0",
        "dependencies": {
            "shopologic\/core": "^1.0.0",
            "shopologic\/api": "^1.0.0"
        }
    },
    "autoload": {
        "psr-4": {
            "Shopologic\\Plugins\\GraphqlSchemaBuilder\\": "src\/"
        }
    },
    "bootstrap": {
        "class": "GraphqlSchemaBuilderPlugin",
        "file": "src\/GraphQLSchemaBuilderPlugin.php"
    },
    "provides": [
        "GraphQLSchemaInterface",
        "TypeBuilderInterface",
        "ResolverInterface",
        "SchemaValidatorInterface"
    ],
    "permissions": [
        "graphql.access",
        "graphql.build_schema",
        "graphql.manage_types",
        "graphql.manage_resolvers",
        "graphql.execute_queries",
        "graphql.view_introspection",
        "graphql.manage_permissions",
        "graphql.export_schema"
    ],
    "hooks": {
        "actions": [
            "graphql.schema_updated",
            "graphql.type_created",
            "graphql.resolver_registered",
            "graphql.query_executed",
            "graphql.subscription_connected",
            "graphql.error_occurred"
        ],
        "filters": [
            "graphql.schema",
            "graphql.types",
            "graphql.resolvers",
            "graphql.context",
            "graphql.validation_rules",
            "graphql.query_complexity"
        ]
    },
    "api": {
        "endpoints": [
            {
                "method": "POST",
                "path": "\/graphql",
                "handler": "Controllers\\GraphQLController@execute",
                "auth": false
            },
            {
                "method": "GET",
                "path": "\/graphql",
                "handler": "Controllers\\GraphQLController@playground",
                "auth": false
            },
            {
                "method": "GET",
                "path": "\/graphql\/schema",
                "handler": "Controllers\\SchemaController@export",
                "auth": true,
                "permission": "graphql.view_introspection"
            },
            {
                "method": "GET",
                "path": "\/api\/v1\/graphql\/types",
                "handler": "Controllers\\TypeController@index",
                "auth": true,
                "permission": "graphql.access"
            },
            {
                "method": "POST",
                "path": "\/api\/v1\/graphql\/types",
                "handler": "Controllers\\TypeController@create",
                "auth": true,
                "permission": "graphql.manage_types"
            },
            {
                "method": "PUT",
                "path": "\/api\/v1\/graphql\/types\/{name}",
                "handler": "Controllers\\TypeController@update",
                "auth": true,
                "permission": "graphql.manage_types"
            },
            {
                "method": "DELETE",
                "path": "\/api\/v1\/graphql\/types\/{name}",
                "handler": "Controllers\\TypeController@delete",
                "auth": true,
                "permission": "graphql.manage_types"
            },
            {
                "method": "GET",
                "path": "\/api\/v1\/graphql\/resolvers",
                "handler": "Controllers\\ResolverController@index",
                "auth": true,
                "permission": "graphql.access"
            },
            {
                "method": "POST",
                "path": "\/api\/v1\/graphql\/resolvers",
                "handler": "Controllers\\ResolverController@create",
                "auth": true,
                "permission": "graphql.manage_resolvers"
            },
            {
                "method": "POST",
                "path": "\/api\/v1\/graphql\/validate",
                "handler": "Controllers\\ValidationController@validate",
                "auth": true,
                "permission": "graphql.build_schema"
            },
            {
                "method": "POST",
                "path": "\/api\/v1\/graphql\/rest-to-graphql",
                "handler": "Controllers\\ConversionController@convertRest",
                "auth": true,
                "permission": "graphql.build_schema"
            },
            {
                "method": "GET",
                "path": "\/api\/v1\/graphql\/subscriptions",
                "handler": "Controllers\\SubscriptionController@index",
                "auth": true
            },
            {
                "method": "WS",
                "path": "\/graphql-ws",
                "handler": "Controllers\\WebSocketController@handle",
                "auth": false
            }
        ]
    },
    "database": {
        "tables": [
            "graphql_types",
            "graphql_fields",
            "graphql_resolvers",
            "graphql_schemas",
            "graphql_queries",
            "graphql_subscriptions",
            "graphql_permissions",
            "graphql_query_log",
            "graphql_performance_metrics",
            "graphql_cache"
        ],
        "migrations": "migrations\/"
    },
    "assets": {
        "js": [
            {
                "src": "assets\/js\/schema-builder.js",
                "position": "footer",
                "pages": [
                    "admin"
                ],
                "deps": [
                    "jquery",
                    "graphql",
                    "react"
                ]
            },
            {
                "src": "assets\/js\/graphql-playground.js",
                "position": "footer",
                "pages": [
                    "graphql-playground"
                ]
            },
            {
                "src": "assets\/js\/type-editor.js",
                "position": "footer",
                "pages": [
                    "admin"
                ]
            },
            {
                "src": "assets\/js\/resolver-mapper.js",
                "position": "footer",
                "pages": [
                    "admin"
                ]
            }
        ],
        "css": [
            {
                "src": "assets\/css\/schema-builder.css",
                "pages": [
                    "admin"
                ]
            },
            {
                "src": "assets\/css\/playground.css",
                "pages": [
                    "graphql-playground"
                ]
            },
            {
                "src": "assets\/css\/type-diagram.css",
                "pages": [
                    "admin"
                ]
            }
        ]
    },
    "config": {
        "schema": {
            "enable_playground": {
                "type": "boolean",
                "label": "Enable GraphQL Playground",
                "default": true,
                "description": "Interactive GraphQL IDE"
            },
            "playground_settings": {
                "type": "object",
                "label": "Playground Settings",
                "depends_on": {
                    "enable_playground": true
                },
                "properties": {
                    "endpoint": {
                        "type": "string",
                        "default": "\/graphql"
                    },
                    "subscription_endpoint": {
                        "type": "string",
                        "default": "\/graphql-ws"
                    },
                    "headers": {
                        "type": "object",
                        "default": []
                    }
                }
            },
            "enable_introspection": {
                "type": "boolean",
                "label": "Enable Schema Introspection",
                "default": true,
                "description": "Allow clients to query schema structure"
            },
            "enable_subscriptions": {
                "type": "boolean",
                "label": "Enable Subscriptions",
                "default": true,
                "description": "Real-time data with WebSockets"
            },
            "query_depth_limit": {
                "type": "number",
                "label": "Query Depth Limit",
                "default": 10,
                "min": 1,
                "max": 20,
                "description": "Maximum nesting level for queries"
            },
            "query_complexity_limit": {
                "type": "number",
                "label": "Query Complexity Limit",
                "default": 1000,
                "min": 100,
                "max": 10000,
                "description": "Maximum complexity score for queries"
            },
            "enable_batching": {
                "type": "boolean",
                "label": "Enable Query Batching",
                "default": true,
                "description": "Allow multiple queries in one request"
            },
            "enable_caching": {
                "type": "boolean",
                "label": "Enable Query Caching",
                "default": true
            },
            "cache_ttl": {
                "type": "number",
                "label": "Cache TTL (seconds)",
                "default": 300,
                "min": 0,
                "max": 3600,
                "depends_on": {
                    "enable_caching": true
                }
            },
            "enable_persisted_queries": {
                "type": "boolean",
                "label": "Enable Persisted Queries",
                "default": false,
                "description": "Store and reference queries by ID"
            },
            "enable_federation": {
                "type": "boolean",
                "label": "Enable Schema Federation",
                "default": false,
                "description": "Support Apollo Federation"
            },
            "enable_tracing": {
                "type": "boolean",
                "label": "Enable Query Tracing",
                "default": true,
                "description": "Include execution timing in responses"
            },
            "default_page_size": {
                "type": "number",
                "label": "Default Page Size",
                "default": 20,
                "min": 1,
                "max": 100
            },
            "max_page_size": {
                "type": "number",
                "label": "Maximum Page Size",
                "default": 100,
                "min": 10,
                "max": 1000
            },
            "scalar_types": {
                "type": "multiselect",
                "label": "Custom Scalar Types",
                "default": [
                    "DateTime",
                    "JSON",
                    "Upload"
                ],
                "options": {
                    "DateTime": "DateTime",
                    "Date": "Date",
                    "Time": "Time",
                    "JSON": "JSON",
                    "Upload": "File Upload",
                    "Email": "Email",
                    "URL": "URL",
                    "PhoneNumber": "Phone Number",
                    "PostalCode": "Postal Code"
                }
            },
            "directive_support": {
                "type": "multiselect",
                "label": "Supported Directives",
                "default": [
                    "include",
                    "skip",
                    "deprecated"
                ],
                "options": {
                    "include": "@include",
                    "skip": "@skip",
                    "deprecated": "@deprecated",
                    "auth": "@auth",
                    "hasRole": "@hasRole",
                    "rateLimit": "@rateLimit",
                    "cache": "@cache",
                    "defer": "@defer",
                    "stream": "@stream"
                }
            },
            "enable_auto_generation": {
                "type": "boolean",
                "label": "Auto-generate Types from Models",
                "default": true
            },
            "enable_rest_wrapper": {
                "type": "boolean",
                "label": "Enable REST API Wrapper",
                "default": true,
                "description": "Expose existing REST endpoints via GraphQL"
            },
            "cors_settings": {
                "type": "object",
                "label": "CORS Settings",
                "properties": {
                    "enabled": {
                        "type": "boolean",
                        "default": true
                    },
                    "origins": {
                        "type": "array",
                        "default": [
                            "*"
                        ]
                    },
                    "credentials": {
                        "type": "boolean",
                        "default": true
                    }
                }
            }
        }
    },
    "widgets": [
        {
            "id": "graphql_stats",
            "name": "GraphQL Statistics",
            "description": "Query performance and usage stats",
            "position": "dashboard",
            "permissions": [
                "graphql.access"
            ]
        },
        {
            "id": "schema_overview",
            "name": "Schema Overview",
            "description": "Types and relationships diagram",
            "position": "dashboard",
            "permissions": [
                "graphql.access"
            ]
        }
    ],
    "scheduled_tasks": [
        {
            "schedule": "*\/5 * * * *",
            "handler": "cleanupQueryCache",
            "description": "Clean expired query cache"
        },
        {
            "schedule": "0 * * * *",
            "handler": "generatePerformanceReport",
            "description": "Generate hourly performance report"
        },
        {
            "schedule": "0 2 * * *",
            "handler": "optimizeResolvers",
            "description": "Optimize resolver performance"
        }
    ],
    "default_types": {
        "Query": {
            "description": "Root query type",
            "fields": {
                "node": {
                    "type": "Node",
                    "args": {
                        "id": {
                            "type": "ID!",
                            "description": "Global object ID"
                        }
                    },
                    "description": "Fetch any object by ID"
                }
            }
        },
        "Mutation": {
            "description": "Root mutation type",
            "fields": []
        },
        "Subscription": {
            "description": "Root subscription type",
            "fields": []
        },
        "PageInfo": {
            "description": "Pagination information",
            "fields": {
                "hasNextPage": {
                    "type": "Boolean!",
                    "description": "Whether there are more pages"
                },
                "hasPreviousPage": {
                    "type": "Boolean!",
                    "description": "Whether there are previous pages"
                },
                "startCursor": {
                    "type": "String",
                    "description": "Cursor of the first edge"
                },
                "endCursor": {
                    "type": "String",
                    "description": "Cursor of the last edge"
                }
            }
        },
        "Node": {
            "description": "Object with globally unique ID",
            "interface": true,
            "fields": {
                "id": {
                    "type": "ID!",
                    "description": "Global object ID"
                }
            }
        }
    },
    "code_generators": {
        "typescript": {
            "name": "TypeScript",
            "template": "generators\/typescript.twig"
        },
        "php": {
            "name": "PHP Types",
            "template": "generators\/php.twig"
        },
        "flow": {
            "name": "Flow",
            "template": "generators\/flow.twig"
        }
    },
    "example_queries": {
        "products": "query GetProducts($first: Int = 10) {\n  products(first: $first) {\n    edges {\n      node {\n        id\n        name\n        price\n      }\n    }\n    pageInfo {\n      hasNextPage\n      endCursor\n    }\n  }\n}",
        "create_product": "mutation CreateProduct($input: CreateProductInput!) {\n  createProduct(input: $input) {\n    product {\n      id\n      name\n      price\n    }\n    errors {\n      field\n      message\n    }\n  }\n}",
        "subscribe_orders": "subscription OnOrderCreated {\n  orderCreated {\n    id\n    totalAmount\n    customer {\n      name\n      email\n    }\n  }\n}"
    },
    "changelog": {
        "1.0.0": [
            "Initial release",
            "Visual schema builder interface",
            "Type and field management",
            "Resolver mapping",
            "GraphQL Playground integration",
            "Subscription support with WebSockets",
            "Query complexity analysis",
            "Performance monitoring",
            "Schema stitching",
            "REST to GraphQL conversion",
            "Code generation",
            "Persisted queries",
            "Federation support"
        ]
    }
}