    "plugin_info": {
        "name": "Advanced Email Marketing Automation",
        "version": "1.0.0",
        "description": "Comprehensive email marketing automation platform with advanced segmentation, behavioral triggers, A\/B testing, personalization, deliverability optimization, and analytics",
        "author": {
            "name": "Shopologic Team",
            "email": "plugins@shopologic.com",
            "url": "https:\/\/shopologic.com"
        },
        "license": "MIT",
        "homepage": "https:\/\/shopologic.com\/plugins\/advanced-email-marketing",
        "keywords": [
            "email-marketing",
            "automation",
            "segmentation",
            "behavioral-triggers",
            "ab-testing",
            "personalization",
            "deliverability",
            "analytics",
            "drip-campaigns",
            "transactional-emails"
        ],
        "requirements": {
            "php": ">=8.3",
            "core": ">=1.0.0",
            "dependencies": {
                "shopologic\/commerce": "^1.0.0",
                "shopologic\/customers": "^1.0.0",
                "shopologic\/analytics": "^1.0.0"
            }
        },
        "autoload": {
            "psr-4": {
                "Shopologic\\Plugins\\AdvancedEmailMarketing\\": "src\/"
            }
        },
        "bootstrap": {
            "class": "AdvancedEmailMarketingPlugin",
            "file": "src\/AdvancedEmailMarketingPlugin.php"
        },
        "provides": [
            "EmailMarketingInterface",
            "AutomationEngineInterface",
            "SegmentationInterface",
            "DeliverabilityInterface",
            "PersonalizationInterface"
        ],
        "permissions": [
            "email_marketing.view",
            "email_marketing.manage",
            "campaigns.view",
            "campaigns.create",
            "campaigns.send",
            "automations.view",
            "automations.manage",
            "segments.view",
            "segments.manage",
            "templates.view",
            "templates.manage",
            "analytics.email_view",
            "deliverability.manage"
        ],
        "hooks": {
            "actions": [
                {
                    "hook": "customer.registered",
                    "handler": "triggerWelcomeSequence",
                    "priority": 10
                },
                {
                    "hook": "order.completed",
                    "handler": "triggerOrderConfirmation",
                    "priority": 10
                },
                {
                    "hook": "cart.abandoned",
                    "handler": "triggerAbandonedCartSequence",
                    "priority": 10
                },
                {
                    "hook": "customer.birthday",
                    "handler": "triggerBirthdayEmail",
                    "priority": 10
                },
                {
                    "hook": "product.viewed",
                    "handler": "trackBehavioralEvent",
                    "priority": 10
                },
                {
                    "hook": "customer.inactive",
                    "handler": "triggerReEngagementSequence",
                    "priority": 10
                }
            ],
            "filters": [
                {
                    "hook": "email.template",
                    "handler": "personalizeEmailContent",
                    "priority": 10
                },
                {
                    "hook": "email.subject",
                    "handler": "personalizeSubjectLine",
                    "priority": 10
                },
                {
                    "hook": "email.send_time",
                    "handler": "optimizeSendTime",
                    "priority": 10
                }
            ]
        },
        "api": {
            "endpoints": [
                {
                    "method": "GET",
                    "path": "\/api\/v1\/email-marketing\/campaigns",
                    "handler": "CampaignController@index",
                    "auth": true,
                    "permission": "campaigns.view"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/email-marketing\/campaigns",
                    "handler": "CampaignController@create",
                    "auth": true,
                    "permission": "campaigns.create"
                },
                {
                    "method": "PUT",
                    "path": "\/api\/v1\/email-marketing\/campaigns\/{id}",
                    "handler": "CampaignController@update",
                    "auth": true,
                    "permission": "campaigns.manage"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/email-marketing\/campaigns\/{id}\/send",
                    "handler": "CampaignController@send",
                    "auth": true,
                    "permission": "campaigns.send"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/email-marketing\/automations",
                    "handler": "AutomationController@index",
                    "auth": true,
                    "permission": "automations.view"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/email-marketing\/automations",
                    "handler": "AutomationController@create",
                    "auth": true,
                    "permission": "automations.manage"
                },
                {
                    "method": "PUT",
                    "path": "\/api\/v1\/email-marketing\/automations\/{id}",
                    "handler": "AutomationController@update",
                    "auth": true,
                    "permission": "automations.manage"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/email-marketing\/automations\/{id}\/activate",
                    "handler": "AutomationController@activate",
                    "auth": true,
                    "permission": "automations.manage"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/email-marketing\/segments",
                    "handler": "SegmentController@index",
                    "auth": true,
                    "permission": "segments.view"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/email-marketing\/segments",
                    "handler": "SegmentController@create",
                    "auth": true,
                    "permission": "segments.manage"
                },
                {
                    "method": "PUT",
                    "path": "\/api\/v1\/email-marketing\/segments\/{id}",
                    "handler": "SegmentController@update",
                    "auth": true,
                    "permission": "segments.manage"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/email-marketing\/segments\/{id}\/calculate",
                    "handler": "SegmentController@calculateSegment",
                    "auth": true,
                    "permission": "segments.view"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/email-marketing\/templates",
                    "handler": "TemplateController@index",
                    "auth": true,
                    "permission": "templates.view"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/email-marketing\/templates",
                    "handler": "TemplateController@create",
                    "auth": true,
                    "permission": "templates.manage"
                },
                {
                    "method": "PUT",
                    "path": "\/api\/v1\/email-marketing\/templates\/{id}",
                    "handler": "TemplateController@update",
                    "auth": true,
                    "permission": "templates.manage"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/email-marketing\/templates\/{id}\/test",
                    "handler": "TemplateController@sendTest",
                    "auth": true,
                    "permission": "templates.manage"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/email-marketing\/analytics",
                    "handler": "AnalyticsController@overview",
                    "auth": true,
                    "permission": "analytics.email_view"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/email-marketing\/analytics\/campaigns\/{id}",
                    "handler": "AnalyticsController@campaignMetrics",
                    "auth": true,
                    "permission": "analytics.email_view"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/email-marketing\/deliverability",
                    "handler": "DeliverabilityController@status",
                    "auth": true,
                    "permission": "deliverability.view"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/email-marketing\/deliverability\/test",
                    "handler": "DeliverabilityController@runTests",
                    "auth": true,
                    "permission": "deliverability.manage"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/email-marketing\/subscribers",
                    "handler": "SubscriberController@index",
                    "auth": true,
                    "permission": "email_marketing.view"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/email-marketing\/subscribers",
                    "handler": "SubscriberController@create",
                    "auth": true,
                    "permission": "email_marketing.manage"
                },
                {
                    "method": "PUT",
                    "path": "\/api\/v1\/email-marketing\/subscribers\/{id}",
                    "handler": "SubscriberController@update",
                    "auth": true,
                    "permission": "email_marketing.manage"
                },
                {
                    "method": "DELETE",
                    "path": "\/api\/v1\/email-marketing\/subscribers\/{id}",
                    "handler": "SubscriberController@unsubscribe",
                    "auth": true,
                    "permission": "email_marketing.manage"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/email-marketing\/webhooks\/bounce",
                    "handler": "WebhookController@handleBounce",
                    "auth": false,
                    "permission": "public"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/email-marketing\/webhooks\/complaint",
                    "handler": "WebhookController@handleComplaint",
                    "auth": false,
                    "permission": "public"
                }
            ]
        },
        "database": {
            "tables": [
                "email_campaigns",
