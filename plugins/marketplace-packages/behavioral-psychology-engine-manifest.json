{
    "package_info": {
        "name": "behavioral-psychology-engine",
        "version": "1.0.0",
        "package_date": "2025-06-30 19:30:58",
        "package_size": 27389,
        "package_format": "zip"
    },
    "plugin_info": {
        "name": "behavioral-psychology-engine",
        "version": "1.0.0",
        "description": "Advanced behavioral psychology system using urgency triggers, social proof automation, and cognitive bias application for conversion optimization",
        "author": {
            "name": "Shopologic"
        },
        "requirements": {
            "php": ">=8.3",
            "core": ">=1.0.0",
            "dependencies": {
                "shopologic\/core": "^1.0"
            }
        },
        "autoload": {
            "psr-4": {
                "Shopologic\\Plugins\\BehavioralPsychologyEngine\\": "src\/"
            }
        },
        "bootstrap": {
            "class": "BehavioralPsychologyEnginePlugin",
            "file": "BehavioralPsychologyEnginePlugin.php"
        },
        "permissions": [
            "hooks.page.*",
            "hooks.product.*",
            "hooks.cart.*",
            "hooks.checkout.*",
            "api.access",
            "dashboard.widget",
            "cron.execute",
            "psychology.triggers.manage",
            "psychology.campaigns.create"
        ],
        "hooks": {
            "actions": [
                "page.product_view",
                "cart.item_added",
                "checkout.initiated",
                "user.behavior_tracked",
                "conversion.opportunity_detected"
            ]
        },
        "api": {
            "endpoints": [
                {
                    "method": "GET",
                    "path": "\/api\/v1\/psychology\/triggers\/active",
                    "handler": "handleGet"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/psychology\/triggers\/create",
                    "handler": "handlePost"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/psychology\/campaigns\/{campaign_id}",
                    "handler": "handleGet"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/psychology\/personalize",
                    "handler": "handlePost"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/psychology\/analytics",
                    "handler": "handleGet"
                }
            ]
        },
        "config": {
            "schema": {
                "configurable": {
                    "type": "boolean",
                    "default": true
                },
                "api_enabled": {
                    "type": "boolean",
                    "default": true
                },
                "widget_enabled": {
                    "type": "boolean",
                    "default": true
                },
                "trigger_types": [
                    "urgency",
                    "scarcity",
                    "social_proof",
                    "authority",
                    "reciprocity"
                ],
                "real_time_personalization": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "scheduled_tasks": [
            "*\/30 * * * * - update_social_proof",
            "0 *\/4 * * * - analyze_trigger_effectiveness",
            "0 2 * * * - optimize_campaigns",
            "0 1 * * MON - generate_psychology_reports"
        ]
    },
    "marketplace_info": {
        "category": "general",
        "tags": [
            "general",
            "automation",
            "performance"
        ],
        "compatibility": {
            "php": ">=8.3",
            "shopologic": ">=2.0"
        },
        "pricing": {
            "model": "free",
            "price": 0
        }
    },
    "quality_metrics": {
        "health_score": 0,
        "performance_grade": "A",
        "test_coverage": 40,
        "security_score": 100
    },
    "assets": {
        "icon": "marketplace-assets\/icon.svg",
        "banner": "marketplace-assets\/banner.svg",
        "logo": "marketplace-assets\/logo.svg",
        "screenshots": [
            "marketplace-assets\/screenshots\/screenshot-1.svg",
            "marketplace-assets\/screenshots\/screenshot-2.svg",
            "marketplace-assets\/screenshots\/screenshot-3.svg"
        ]
    }
}