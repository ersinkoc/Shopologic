{
    "package_info": {
        "name": "enterprise-security-compliance",
        "version": "1.0.0",
        "package_date": "2025-06-30 19:31:01",
        "package_size": 22929,
        "package_format": "zip"
    },
    "plugin_info": {
        "name": "enterprise-security-compliance",
        "version": "1.0.0",
        "description": "Enterprise-grade security and compliance with vulnerability scanning, audit trails, GDPR compliance, and threat detection",
        "author": {
            "name": "Shopologic"
        },
        "requirements": {
            "php": ">=8.3",
            "core": ">=1.0.0",
            "dependencies": {
                "shopologic\/core": "^1.0"
            }
        },
        "autoload": {
            "psr-4": {
                "Shopologic\\Plugins\\EnterpriseSecurityCompliance\\": "src\/"
            }
        },
        "bootstrap": {
            "class": "EnterpriseSecurityCompliancePlugin",
            "file": "EnterpriseSecurityCompliancePlugin.php"
        },
        "permissions": [
            "hooks.security.*",
            "hooks.audit.*",
            "api.access",
            "dashboard.widget",
            "cron.execute",
            "security.scan",
            "compliance.audit"
        ],
        "hooks": {
            "actions": [
                "user.login",
                "user.action",
                "data.accessed",
                "security.threat_detected",
                "compliance.audit_required"
            ]
        },
        "api": {
            "endpoints": [
                {
                    "method": "GET",
                    "path": "\/api\/v1\/security\/dashboard",
                    "handler": "handleGet"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/security\/scan",
                    "handler": "handlePost"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/compliance\/status",
                    "handler": "handleGet"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/audit\/logs",
                    "handler": "handleGet"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/security\/report-incident",
                    "handler": "handlePost"
                }
            ]
        },
        "config": {
            "schema": {
                "configurable": {
                    "type": "boolean",
                    "default": true
                },
                "api_enabled": {
                    "type": "boolean",
                    "default": true
                },
                "widget_enabled": {
                    "type": "boolean",
                    "default": true
                },
                "features": [
                    "vulnerability_scanning",
                    "audit_trails",
                    "gdpr_compliance",
                    "threat_detection"
                ],
                "compliance_standards": [
                    "PCI-DSS",
                    "GDPR",
                    "CCPA",
                    "SOX",
                    "HIPAA"
                ]
            }
        },
        "scheduled_tasks": [
            "0 *\/4 * * * - vulnerability_scan",
            "0 2 * * * - generate_audit_reports",
            "*\/15 * * * * - threat_monitoring",
            "0 1 * * SUN - compliance_check"
        ]
    },
    "marketplace_info": {
        "category": "security",
        "tags": [
            "security",
            "enterprise"
        ],
        "compatibility": {
            "php": ">=8.3",
            "shopologic": ">=2.0"
        },
        "pricing": {
            "model": "free",
            "price": 0
        }
    },
    "quality_metrics": {
        "health_score": 0,
        "performance_grade": "A",
        "test_coverage": 40,
        "security_score": 100
    },
    "assets": {
        "icon": "marketplace-assets\/icon.svg",
        "banner": "marketplace-assets\/banner.svg",
        "logo": "marketplace-assets\/logo.svg",
        "screenshots": [
            "marketplace-assets\/screenshots\/screenshot-1.svg",
            "marketplace-assets\/screenshots\/screenshot-2.svg",
            "marketplace-assets\/screenshots\/screenshot-3.svg"
        ]
    }
}