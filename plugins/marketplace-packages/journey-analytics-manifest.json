{
    "package_info": {
        "name": "journey-analytics",
        "version": "1.0.0",
        "package_date": "2025-06-30 19:31:03",
        "package_size": 16168,
        "package_format": "zip"
    },
    "plugin_info": {
        "name": "Customer Journey Analytics",
        "version": "1.0.0",
        "description": "Advanced customer behavior tracking, journey mapping, and conversion funnel analysis",
        "author": {
            "name": "Shopologic Team",
            "email": "plugins@shopologic.com"
        },
        "requirements": {
            "php": ">=8.3",
            "core": ">=1.0.0",
            "dependencies": {
                "shopologic\/commerce": "^1.0.0"
            }
        },
        "bootstrap": {
            "class": "JourneyAnalyticsPlugin",
            "file": "JourneyAnalyticsPlugin.php"
        },
        "permissions": [
            "customers.read",
            "orders.read",
            "analytics.write",
            "hooks.*"
        ],
        "hooks": {
            "actions": [
                "page.viewed",
                "product.viewed",
                "cart.item_added",
                "order.completed",
                "customer.searched"
            ]
        },
        "api": {
            "endpoints": [
                {
                    "method": "GET",
                    "path": "\/api\/v1\/analytics\/journey\/{customer_id}",
                    "handler": "handleGet"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/analytics\/funnel",
                    "handler": "handleGet"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/analytics\/heatmap",
                    "handler": "handleGet"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/analytics\/segments",
                    "handler": "handleGet"
                }
            ]
        },
        "database": {
            "tables": [
                "customer_journeys",
                "journey_touchpoints",
                "conversion_funnels",
                "behavior_segments",
                "journey_analytics"
            ],
            "migrations": "migrations\/"
        },
        "assets": {
            "js": [
                "assets\/journey-tracking.js",
                "assets\/heatmap.js"
            ],
            "css": [
                "assets\/analytics.css"
            ]
        },
        "config": {
            "schema": {
                "track_anonymous_users": {
                    "type": "boolean",
                    "default": true,
                    "description": "Track anonymous visitor behavior"
                },
                "session_timeout": {
                    "type": "number",
                    "default": 30,
                    "min": 15,
                    "max": 120,
                    "description": "Session timeout in minutes"
                },
                "enable_heatmaps": {
                    "type": "boolean",
                    "default": true,
                    "description": "Generate behavior heatmaps"
                }
            }
        },
        "autoload": {
            "psr-4": {
                "Shopologic\\Plugins\\JourneyAnalytics\\": "src\/"
            }
        }
    },
    "marketplace_info": {
        "category": "analytics",
        "tags": [
            "analytics"
        ],
        "compatibility": {
            "php": ">=8.3",
            "shopologic": ">=2.0"
        },
        "pricing": {
            "model": "free",
            "price": 0
        }
    },
    "quality_metrics": {
        "health_score": 0,
        "performance_grade": "A",
        "test_coverage": 40,
        "security_score": 100
    },
    "assets": {
        "icon": "marketplace-assets\/icon.svg",
        "banner": "marketplace-assets\/banner.svg",
        "logo": "marketplace-assets\/logo.svg",
        "screenshots": [
            "marketplace-assets\/screenshots\/screenshot-1.svg",
            "marketplace-assets\/screenshots\/screenshot-2.svg",
            "marketplace-assets\/screenshots\/screenshot-3.svg"
        ]
    }
}