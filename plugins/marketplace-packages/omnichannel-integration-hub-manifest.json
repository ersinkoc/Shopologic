{
    "package_info": {
        "name": "omnichannel-integration-hub",
        "version": "1.0.0",
        "package_date": "2025-06-30 19:31:05",
        "package_size": 21991,
        "package_format": "zip"
    },
    "plugin_info": {
        "name": "omnichannel-integration-hub",
        "version": "1.0.0",
        "description": "Unified commerce platform integrating online store, POS, marketplaces, social commerce, and mobile apps with real-time inventory sync",
        "author": {
            "name": "Shopologic"
        },
        "requirements": {
            "php": ">=8.3",
            "core": ">=1.0.0",
            "dependencies": {
                "shopologic\/core": "^1.0"
            }
        },
        "autoload": {
            "psr-4": {
                "Shopologic\\Plugins\\OmnichannelIntegrationHub\\": "src\/"
            }
        },
        "bootstrap": {
            "class": "OmnichannelIntegrationHubPlugin",
            "file": "OmnichannelIntegrationHubPlugin.php"
        },
        "permissions": [
            "hooks.order.*",
            "hooks.inventory.*",
            "hooks.customer.*",
            "api.access",
            "dashboard.widget",
            "cron.execute",
            "channels.manage",
            "integrations.configure"
        ],
        "hooks": {
            "actions": [
                "order.created",
                "inventory.updated",
                "product.synced",
                "customer.unified",
                "channel.connected"
            ]
        },
        "api": {
            "endpoints": [
                {
                    "method": "GET",
                    "path": "\/api\/v1\/omnichannel\/channels",
                    "handler": "handleGet"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/omnichannel\/sync",
                    "handler": "handlePost"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/omnichannel\/inventory",
                    "handler": "handleGet"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/omnichannel\/order\/route",
                    "handler": "handlePost"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/omnichannel\/analytics",
                    "handler": "handleGet"
                }
            ]
        },
        "config": {
            "schema": {
                "configurable": {
                    "type": "boolean",
                    "default": true
                },
                "api_enabled": {
                    "type": "boolean",
                    "default": true
                },
                "widget_enabled": {
                    "type": "boolean",
                    "default": true
                },
                "channels": [
                    "web",
                    "pos",
                    "mobile",
                    "marketplace",
                    "social"
                ],
                "real_time_sync": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "scheduled_tasks": [
            "*\/5 * * * * - sync_inventory",
            "*\/15 * * * * - sync_orders",
            "0 * * * * - sync_products",
            "0 2 * * * - reconcile_channels"
        ]
    },
    "marketplace_info": {
        "category": "general",
        "tags": [
            "general",
            "real-time",
            "mobile"
        ],
        "compatibility": {
            "php": ">=8.3",
            "shopologic": ">=2.0"
        },
        "pricing": {
            "model": "free",
            "price": 0
        }
    },
    "quality_metrics": {
        "health_score": 0,
        "performance_grade": "A",
        "test_coverage": 40,
        "security_score": 100
    },
    "assets": {
        "icon": "marketplace-assets\/icon.svg",
        "banner": "marketplace-assets\/banner.svg",
        "logo": "marketplace-assets\/logo.svg",
        "screenshots": [
            "marketplace-assets\/screenshots\/screenshot-1.svg",
            "marketplace-assets\/screenshots\/screenshot-2.svg",
            "marketplace-assets\/screenshots\/screenshot-3.svg"
        ]
    }
}