{
    "package_info": {
        "name": "progressive-web-app-builder",
        "version": "1.0.0",
        "package_date": "2025-06-30 19:31:10",
        "package_size": 20305,
        "package_format": "zip"
    },
    "plugin_info": {
        "name": "progressive-web-app-builder",
        "version": "1.0.0",
        "description": "Complete PWA builder with offline support, push notifications, app shell architecture, service workers, manifest generation, caching strategies, and app store deployment",
        "author": {
            "name": "Shopologic Team",
            "email": "dev@shopologic.com",
            "url": "https:\/\/shopologic.com"
        },
        "license": "MIT",
        "homepage": "https:\/\/shopologic.com\/plugins\/progressive-web-app-builder",
        "keywords": [
            "pwa",
            "progressive-web-app",
            "offline",
            "service-worker",
            "push-notifications",
            "app-shell",
            "manifest",
            "mobile"
        ],
        "requirements": {
            "php": ">=8.3",
            "core": ">=1.0.0",
            "dependencies": {
                "shopologic\/core": "^1.0.0",
                "shopologic\/frontend": "^1.0.0"
            }
        },
        "autoload": {
            "psr-4": {
                "Shopologic\\Plugins\\ProgressiveWebAppBuilder\\": "src\/"
            }
        },
        "bootstrap": {
            "class": "ProgressiveWebAppBuilderPlugin",
            "file": "src\/ProgressiveWebAppBuilderPlugin.php"
        },
        "provides": [
            "PWABuilderInterface",
            "ServiceWorkerInterface",
            "NotificationInterface",
            "CacheStrategyInterface"
        ],
        "permissions": [
            "pwa.access",
            "pwa.configure",
            "pwa.manage_notifications",
            "pwa.view_analytics",
            "pwa.deploy_stores",
            "pwa.manage_cache"
        ],
        "hooks": {
            "actions": [
                "pwa.installed",
                "pwa.updated",
                "notification.sent",
                "cache.updated",
                "offline.sync",
                "app.launched"
            ],
            "filters": [
                "pwa.manifest",
                "service_worker.config",
                "cache.strategy",
                "notification.payload",
                "offline.fallback"
            ]
        },
        "api": {
            "endpoints": [
                {
                    "method": "GET",
                    "path": "\/manifest.json",
                    "handler": "Controllers\\ManifestController@generate",
                    "auth": false,
                    "cache": 3600
                },
                {
                    "method": "GET",
                    "path": "\/service-worker.js",
                    "handler": "Controllers\\ServiceWorkerController@generate",
                    "auth": false
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/pwa\/notifications\/subscribe",
                    "handler": "Controllers\\NotificationController@subscribe",
                    "auth": true
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/pwa\/notifications\/send",
                    "handler": "Controllers\\NotificationController@send",
                    "auth": true,
                    "permission": "pwa.manage_notifications"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/pwa\/analytics",
                    "handler": "Controllers\\AnalyticsController@dashboard",
                    "auth": true,
                    "permission": "pwa.view_analytics"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/pwa\/cache\/clear",
                    "handler": "Controllers\\CacheController@clear",
                    "auth": true,
                    "permission": "pwa.manage_cache"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/pwa\/offline-pages",
                    "handler": "Controllers\\OfflineController@pages",
                    "auth": false
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/pwa\/sync",
                    "handler": "Controllers\\SyncController@sync",
                    "auth": true
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/pwa\/app-shell",
                    "handler": "Controllers\\AppShellController@shell",
                    "auth": false
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/pwa\/deploy",
                    "handler": "Controllers\\DeploymentController@deploy",
                    "auth": true,
                    "permission": "pwa.deploy_stores"
                }
            ]
        },
        "database": {
            "tables": [
                "pwa_subscriptions",
                "pwa_notifications",
                "pwa_analytics",
                "pwa_cache_entries",
                "pwa_sync_queue",
                "pwa_installations",
                "pwa_user_preferences",
                "pwa_deployment_history",
                "pwa_offline_content",
                "pwa_performance_metrics"
            ],
            "migrations": "migrations\/"
        },
        "assets": {
            "js": [
                {
                    "src": "assets\/js\/pwa-installer.js",
                    "position": "footer",
                    "pages": [
                        "all"
                    ]
                },
                {
                    "src": "assets\/js\/pwa-dashboard.js",
                    "position": "footer",
                    "pages": [
                        "admin"
                    ],
                    "deps": [
                        "jquery",
                        "chart.js"
                    ]
                },
                {
                    "src": "assets\/js\/notification-manager.js",
                    "position": "footer",
                    "pages": [
                        "admin"
                    ]
                },
                {
                    "src": "assets\/js\/offline-manager.js",
                    "position": "footer",
                    "pages": [
                        "all"
                    ]
                }
            ],
            "css": [
                {
                    "src": "assets\/css\/pwa-installer.css",
                    "pages": [
                        "all"
                    ]
                },
                {
                    "src": "assets\/css\/pwa-dashboard.css",
                    "pages": [
                        "admin"
                    ]
                },
                {
                    "src": "assets\/css\/offline-ui.css",
                    "pages": [
                        "all"
                    ]
                }
            ]
        },
        "config": {
            "schema": {
                "app_settings": {
                    "type": "object",
                    "label": "App Settings",
                    "properties": {
                        "name": {
                            "type": "string",
                            "label": "App Name",
                            "default": "My PWA"
                        },
                        "short_name": {
                            "type": "string",
                            "label": "Short Name",
                            "default": "PWA"
                        },
                        "description": {
                            "type": "string",
                            "label": "Description",
                            "default": "Progressive Web App"
                        },
                        "theme_color": {
                            "type": "color",
                            "label": "Theme Color",
                            "default": "#2196F3"
                        },
                        "background_color": {
                            "type": "color",
                            "label": "Background Color",
                            "default": "#FFFFFF"
                        },
                        "display": {
                            "type": "select",
                            "label": "Display Mode",
                            "default": "standalone",
                            "options": {
                                "fullscreen": "Fullscreen",
                                "standalone": "Standalone",
                                "minimal-ui": "Minimal UI",
                                "browser": "Browser"
                            }
                        },
                        "orientation": {
                            "type": "select",
                            "label": "Orientation",
                            "default": "any",
                            "options": {
                                "any": "Any",
                                "portrait": "Portrait",
                                "landscape": "Landscape"
                            }
                        }
                    }
                },
                "icons": {
                    "type": "object",
                    "label": "App Icons",
                    "properties": {
                        "icon_192": {
                            "type": "media",
                            "label": "Icon 192x192",
                            "accept": "image\/*"
                        },
                        "icon_512": {
                            "type": "media",
                            "label": "Icon 512x512",
                            "accept": "image\/*"
                        },
                        "maskable_icon": {
                            "type": "media",
                            "label": "Maskable Icon",
                            "accept": "image\/*"
                        },
                        "apple_touch_icon": {
                            "type": "media",
                            "label": "Apple Touch Icon",
                            "accept": "image\/*"
                        }
                    }
                },
                "service_worker": {
                    "type": "object",
                    "label": "Service Worker Configuration",
                    "properties": {
                        "cache_strategy": {
                            "type": "select",
                            "label": "Cache Strategy",
                            "default": "network_first",
                            "options": {
                                "cache_first": "Cache First",
                                "network_first": "Network First",
                                "cache_only": "Cache Only",
                                "network_only": "Network Only",
                                "stale_while_revalidate": "Stale While Revalidate"
                            }
                        },
                        "cache_duration": {
                            "type": "number",
                            "label": "Cache Duration (hours)",
                            "default": 24,
                            "min": 1,
                            "max": 168
                        },
                        "cache_assets": {
                            "type": "multiselect",
                            "label": "Assets to Cache",
                            "default": [
                                "css",
                                "js",
                                "images",
                                "fonts"
                            ],
                            "options": {
                                "css": "CSS Files",
                                "js": "JavaScript Files",
                                "images": "Images",
                                "fonts": "Fonts",
                                "html": "HTML Pages",
                                "api": "API Responses"
                            }
                        },
                        "offline_page": {
                            "type": "string",
                            "label": "Offline Page URL",
                            "default": "\/offline"
                        }
                    }
                },
                "push_notifications": {
                    "type": "object",
                    "label": "Push Notifications",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": true
                        },
                        "vapid_public_key": {
                            "type": "string",
                            "label": "VAPID Public Key"
                        },
                        "vapid_private_key": {
                            "type": "string",
                            "label": "VAPID Private Key",
                            "encrypted": true
                        },
                        "default_icon": {
                            "type": "media",
                            "label": "Notification Icon"
                        },
                        "default_badge": {
                            "type": "media",
                            "label": "Notification Badge"
                        }
                    }
                },
                "app_shell": {
                    "type": "object",
                    "label": "App Shell Architecture",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "default": true
                        },
                        "shell_routes": {
                            "type": "array",
                            "label": "Shell Routes",
                            "default": [
                                "\/",
                                "\/products",
                                "\/cart",
                                "\/account"
                            ]
                        },
                        "preload_routes": {
                            "type": "array",
                            "label": "Preload Routes",
                            "default": [
                                "\/",
                                "\/products"
                            ]
                        },
                        "navigation_preload": {
                            "type": "boolean",
                            "label": "Navigation Preload",
                            "default": true
                        }
                    }
                },
                "offline_features": {
                    "type": "object",
                    "label": "Offline Features",
                    "properties": {
                        "background_sync": {
                            "type": "boolean",
                            "label": "Background Sync",
                            "default": true
                        },
                        "periodic_sync": {
                            "type": "boolean",
                            "label": "Periodic Background Sync",
                            "default": false
                        },
                        "offline_analytics": {
                            "type": "boolean",
                            "label": "Offline Analytics",
                            "default": true
                        },
                        "queue_requests": {
                            "type": "boolean",
                            "label": "Queue Failed Requests",
                            "default": true
                        }
                    }
                },
                "performance": {
                    "type": "object",
                    "label": "Performance Optimization",
                    "properties": {
                        "lazy_loading": {
                            "type": "boolean",
                            "label": "Lazy Load Images",
                            "default": true
                        },
                        "code_splitting": {
                            "type": "boolean",
                            "label": "Code Splitting",
                            "default": true
                        },
                        "prefetch_links": {
                            "type": "boolean",
                            "label": "Prefetch Links",
                            "default": true
                        },
                        "compress_assets": {
                            "type": "boolean",
                            "label": "Compress Assets",
                            "default": true
                        },
                        "webp_images": {
                            "type": "boolean",
                            "label": "Convert to WebP",
                            "default": true
                        }
                    }
                },
                "app_store_deployment": {
                    "type": "object",
                    "label": "App Store Deployment",
                    "properties": {
                        "google_play": {
                            "type": "boolean",
                            "label": "Deploy to Google Play",
                            "default": false
                        },
                        "microsoft_store": {
                            "type": "boolean",
                            "label": "Deploy to Microsoft Store",
                            "default": false
                        },
                        "app_store_category": {
                            "type": "select",
                            "label": "App Category",
                            "default": "shopping",
                            "options": {
                                "shopping": "Shopping",
                                "business": "Business",
                                "productivity": "Productivity",
                                "lifestyle": "Lifestyle",
                                "utilities": "Utilities"
                            }
                        }
                    }
                },
                "analytics": {
                    "type": "object",
                    "label": "Analytics Configuration",
                    "properties": {
                        "track_installs": {
                            "type": "boolean",
                            "label": "Track Installations",
                            "default": true
                        },
                        "track_engagement": {
                            "type": "boolean",
                            "label": "Track Engagement",
                            "default": true
                        },
                        "track_performance": {
                            "type": "boolean",
                            "label": "Track Performance",
                            "default": true
                        }
                    }
                },
                "advanced_features": {
                    "type": "multiselect",
                    "label": "Advanced Features",
                    "default": [
                        "share_target",
                        "web_share"
                    ],
                    "options": {
                        "share_target": "Share Target API",
                        "web_share": "Web Share API",
                        "contact_picker": "Contact Picker API",
                        "file_handling": "File Handling API",
                        "payment_handler": "Payment Handler API",
                        "shortcuts": "App Shortcuts",
                        "protocol_handlers": "Protocol Handlers"
                    }
                }
            }
        },
        "widgets": [
            {
                "id": "pwa_stats",
                "name": "PWA Statistics",
                "description": "Installation and engagement metrics",
                "position": "dashboard",
                "permissions": [
                    "pwa.access"
                ]
            },
            {
                "id": "notification_stats",
                "name": "Notification Statistics",
                "description": "Push notification metrics",
                "position": "dashboard",
                "permissions": [
                    "pwa.access"
                ]
            },
            {
                "id": "offline_usage",
                "name": "Offline Usage",
                "description": "Offline feature usage stats",
                "position": "dashboard",
                "permissions": [
                    "pwa.access"
                ]
            }
        ],
        "scheduled_tasks": [
            {
                "schedule": "*\/5 * * * *",
                "handler": "processNotificationQueue",
                "description": "Process pending notifications"
            },
            {
                "schedule": "*\/15 * * * *",
                "handler": "syncOfflineData",
                "description": "Sync offline data"
            },
            {
                "schedule": "0 * * * *",
                "handler": "updateCacheStrategy",
                "description": "Update cache strategy"
            },
            {
                "schedule": "0 2 * * *",
                "handler": "cleanupOldCaches",
                "description": "Clean up old cache entries"
            },
            {
                "schedule": "0 3 * * *",
                "handler": "generatePerformanceReport",
                "description": "Generate PWA performance report"
            }
        ],
        "templates": {
            "offline_page": {
                "name": "Offline Page",
                "file": "templates\/offline.php"
            },
            "install_prompt": {
                "name": "Install Prompt",
                "file": "templates\/install-prompt.php"
            },
            "update_prompt": {
                "name": "Update Prompt",
                "file": "templates\/update-prompt.php"
            }
        },
        "changelog": {
            "1.0.0": [
                "Initial release",
                "Service worker implementation",
                "Offline support",
                "Push notifications",
                "App shell architecture",
                "Web app manifest generation",
                "Multiple caching strategies",
                "Background sync",
                "App store deployment (TWA)",
                "Performance optimization",
                "Analytics integration",
                "Advanced PWA features"
            ]
        }
    },
    "marketplace_info": {
        "category": "mobile",
        "tags": [
            "mobile"
        ],
        "compatibility": {
            "php": ">=8.3",
            "shopologic": ">=2.0"
        },
        "pricing": {
            "model": "free",
            "price": 0
        }
    },
    "quality_metrics": {
        "health_score": 0,
        "performance_grade": "C",
        "test_coverage": 40,
        "security_score": 100
    },
    "assets": {
        "icon": "marketplace-assets\/icon.svg",
        "banner": "marketplace-assets\/banner.svg",
        "logo": "marketplace-assets\/logo.svg",
        "screenshots": [
            "marketplace-assets\/screenshots\/screenshot-1.svg",
            "marketplace-assets\/screenshots\/screenshot-2.svg",
            "marketplace-assets\/screenshots\/screenshot-3.svg"
        ]
    }
}