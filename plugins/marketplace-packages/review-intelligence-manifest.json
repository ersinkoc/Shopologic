{
    "package_info": {
        "name": "review-intelligence",
        "version": "1.0.0",
        "package_date": "2025-06-30 19:31:11",
        "package_size": 16699,
        "package_format": "zip"
    },
    "plugin_info": {
        "name": "Review Intelligence",
        "version": "1.0.0",
        "description": "Smart review management with sentiment analysis, fake review detection, and automated responses",
        "author": {
            "name": "Shopologic Team",
            "email": "plugins@shopologic.com"
        },
        "requirements": {
            "php": ">=8.3",
            "core": ">=1.0.0",
            "dependencies": {
                "shopologic\/commerce": "^1.0.0"
            }
        },
        "bootstrap": {
            "class": "ReviewIntelligencePlugin",
            "file": "ReviewIntelligencePlugin.php"
        },
        "permissions": [
            "products.read",
            "customers.read",
            "reviews.write",
            "notifications.send",
            "hooks.*"
        ],
        "hooks": {
            "actions": [
                "review.submitted",
                "review.moderated",
                "order.completed",
                "product.display"
            ]
        },
        "api": {
            "endpoints": [
                {
                    "method": "POST",
                    "path": "\/api\/v1\/reviews\/analyze",
                    "handler": "handlePost"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/reviews\/sentiment\/{product_id}",
                    "handler": "handleGet"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/reviews\/moderate",
                    "handler": "handlePost"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/reviews\/insights",
                    "handler": "handleGet"
                }
            ]
        },
        "database": {
            "tables": [
                "review_analysis",
                "sentiment_scores",
                "review_flags",
                "review_insights"
            ],
            "migrations": "migrations\/"
        },
        "assets": {
            "js": [
                "assets\/review-analytics.js"
            ],
            "css": [
                "assets\/reviews.css"
            ]
        },
        "config": {
            "schema": {
                "enable_sentiment_analysis": {
                    "type": "boolean",
                    "default": true,
                    "description": "Analyze review sentiment automatically"
                },
                "enable_fake_detection": {
                    "type": "boolean",
                    "default": true,
                    "description": "Detect potentially fake reviews"
                },
                "auto_moderate": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically moderate flagged reviews"
                },
                "review_request_delay_days": {
                    "type": "number",
                    "default": 7,
                    "min": 1,
                    "max": 30,
                    "description": "Days after purchase to request review"
                }
            }
        },
        "autoload": {
            "psr-4": {
                "Shopologic\\Plugins\\ReviewIntelligence\\": "src\/"
            }
        }
    },
    "marketplace_info": {
        "category": "social",
        "tags": [
            "social"
        ],
        "compatibility": {
            "php": ">=8.3",
            "shopologic": ">=2.0"
        },
        "pricing": {
            "model": "free",
            "price": 0
        }
    },
    "quality_metrics": {
        "health_score": 0,
        "performance_grade": "A",
        "test_coverage": 40,
        "security_score": 100
    },
    "assets": {
        "icon": "marketplace-assets\/icon.svg",
        "banner": "marketplace-assets\/banner.svg",
        "logo": "marketplace-assets\/logo.svg",
        "screenshots": [
            "marketplace-assets\/screenshots\/screenshot-1.svg",
            "marketplace-assets\/screenshots\/screenshot-2.svg",
            "marketplace-assets\/screenshots\/screenshot-3.svg"
        ]
    }
}