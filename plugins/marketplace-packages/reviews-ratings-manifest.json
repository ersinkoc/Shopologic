{
    "package_info": {
        "name": "reviews-ratings",
        "version": "1.0.0",
        "package_date": "2025-06-30 19:31:11",
        "package_size": 16192,
        "package_format": "zip"
    },
    "plugin_info": {
        "name": "Product Reviews & Ratings",
        "version": "1.0.0",
        "description": "Add customer reviews and ratings to products with moderation, rich snippets, email notifications, and review incentives",
        "author": {
            "name": "Shopologic Team",
            "email": "plugins@shopologic.com",
            "url": "https:\/\/shopologic.com"
        },
        "license": "MIT",
        "homepage": "https:\/\/shopologic.com\/plugins\/reviews-ratings",
        "keywords": [
            "reviews",
            "ratings",
            "feedback",
            "testimonials",
            "ugc"
        ],
        "requirements": {
            "php": ">=8.3",
            "core": ">=1.0.0",
            "dependencies": {
                "shopologic\/commerce": "^1.0.0"
            }
        },
        "autoload": {
            "psr-4": {
                "Shopologic\\Plugins\\ReviewsRatings\\": "src\/"
            }
        },
        "bootstrap": {
            "class": "ReviewsRatingsPlugin",
            "file": "src\/ReviewsPlugin.php"
        },
        "provides": [
            "ReviewsInterface",
            "RatingsInterface"
        ],
        "permissions": [
            "reviews.view",
            "reviews.create",
            "reviews.moderate",
            "reviews.delete",
            "reviews.respond"
        ],
        "hooks": {
            "actions": [
                {
                    "hook": "product.display",
                    "handler": "displayProductReviews",
                    "priority": 20
                },
                {
                    "hook": "product.schema",
                    "handler": "addReviewSchema",
                    "priority": 10
                },
                {
                    "hook": "order.completed",
                    "handler": "scheduleReviewRequest",
                    "priority": 30
                },
                {
                    "hook": "admin.menu",
                    "handler": "addAdminMenu",
                    "priority": 50
                }
            ]
        },
        "api": {
            "endpoints": [
                {
                    "method": "GET",
                    "path": "\/api\/v1\/products\/{id}\/reviews",
                    "handler": "Controllers\\ReviewController@getProductReviews",
                    "auth": false
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/products\/{id}\/reviews",
                    "handler": "Controllers\\ReviewController@createReview",
                    "auth": true
                },
                {
                    "method": "PUT",
                    "path": "\/api\/v1\/reviews\/{id}",
                    "handler": "Controllers\\ReviewController@updateReview",
                    "auth": true
                },
                {
                    "method": "DELETE",
                    "path": "\/api\/v1\/reviews\/{id}",
                    "handler": "Controllers\\ReviewController@deleteReview",
                    "auth": true
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/reviews\/{id}\/helpful",
                    "handler": "Controllers\\ReviewController@markHelpful",
                    "auth": false
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/reviews\/{id}\/report",
                    "handler": "Controllers\\ReviewController@reportReview",
                    "auth": false
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/reviews\/{id}\/response",
                    "handler": "Controllers\\ReviewController@respondToReview",
                    "auth": true,
                    "permission": "reviews.respond"
                }
            ]
        },
        "database": {
            "tables": [
                "reviews",
                "review_votes",
                "review_reports",
                "review_responses",
                "review_invitations"
            ],
            "migrations": "migrations\/"
        },
        "assets": {
            "js": [
                {
                    "src": "assets\/js\/reviews-widget.js",
                    "position": "footer",
                    "pages": [
                        "product"
                    ]
                },
                {
                    "src": "assets\/js\/review-form.js",
                    "position": "footer",
                    "pages": [
                        "account",
                        "product"
                    ]
                }
            ],
            "css": [
                {
                    "src": "assets\/css\/reviews.css",
                    "pages": [
                        "product",
                        "account"
                    ]
                },
                {
                    "src": "assets\/css\/star-rating.css",
                    "pages": [
                        "all"
                    ]
                }
            ]
        },
        "config": {
            "schema": {
                "enable_reviews": {
                    "type": "boolean",
                    "label": "Enable Reviews",
                    "description": "Allow customers to leave reviews",
                    "default": true
                },
                "enable_ratings": {
                    "type": "boolean",
                    "label": "Enable Ratings",
                    "description": "Allow star ratings without requiring written reviews",
                    "default": true
                },
                "rating_scale": {
                    "type": "select",
                    "label": "Rating Scale",
                    "default": "5",
                    "options": {
                        "5": "5 Stars",
                        "10": "10 Stars",
                        "100": "100 Points"
                    }
                },
                "require_purchase": {
                    "type": "boolean",
                    "label": "Require Purchase",
                    "description": "Only allow reviews from verified purchasers",
                    "default": true
                },
                "moderation_mode": {
                    "type": "select",
                    "label": "Moderation Mode",
                    "default": "auto",
                    "options": {
                        "auto": "Auto-approve (with spam filtering)",
                        "manual": "Manual approval required",
                        "none": "No moderation"
                    }
                },
                "allow_anonymous": {
                    "type": "boolean",
                    "label": "Allow Anonymous Reviews",
                    "description": "Allow reviewers to post anonymously",
                    "default": false
                },
                "review_request_delay": {
                    "type": "number",
                    "label": "Review Request Delay (days)",
                    "description": "Days after order completion to send review request",
                    "default": 14,
                    "min": 1,
                    "max": 90
                },
                "enable_rich_snippets": {
                    "type": "boolean",
                    "label": "Enable Rich Snippets",
                    "description": "Add structured data for search engines",
                    "default": true
                },
                "enable_media_uploads": {
                    "type": "boolean",
                    "label": "Enable Photo\/Video Uploads",
                    "description": "Allow customers to upload photos and videos with reviews",
                    "default": true
                },
                "max_media_files": {
                    "type": "number",
                    "label": "Max Media Files",
                    "description": "Maximum number of photos\/videos per review",
                    "default": 5,
                    "min": 1,
                    "max": 10,
                    "depends_on": {
                        "enable_media_uploads": true
                    }
                },
                "incentive_enabled": {
                    "type": "boolean",
                    "label": "Enable Review Incentives",
                    "description": "Reward customers for leaving reviews",
                    "default": false
                },
                "incentive_type": {
                    "type": "select",
                    "label": "Incentive Type",
                    "default": "points",
                    "options": {
                        "points": "Loyalty Points",
                        "discount": "Discount Code",
                        "credit": "Store Credit"
                    },
                    "depends_on": {
                        "incentive_enabled": true
                    }
                },
                "incentive_amount": {
                    "type": "number",
                    "label": "Incentive Amount",
                    "description": "Points, percentage, or credit amount",
                    "default": 100,
                    "depends_on": {
                        "incentive_enabled": true
                    }
                },
                "spam_keywords": {
                    "type": "textarea",
                    "label": "Spam Keywords",
                    "description": "Comma-separated list of keywords to flag as spam",
                    "default": "viagra,casino,lottery,click here",
                    "rows": 3
                },
                "min_review_length": {
                    "type": "number",
                    "label": "Minimum Review Length",
                    "description": "Minimum characters required for written reviews",
                    "default": 20,
                    "min": 0,
                    "max": 500
                },
                "enable_qa": {
                    "type": "boolean",
                    "label": "Enable Q&A Section",
                    "description": "Allow customers to ask and answer questions",
                    "default": true
                }
            }
        },
        "widgets": [
            {
                "id": "recent_reviews",
                "name": "Recent Reviews",
                "description": "Display recent customer reviews",
                "position": "dashboard",
                "permissions": [
                    "reviews.view"
                ]
            },
            {
                "id": "review_stats",
                "name": "Review Statistics",
                "description": "Overview of review metrics",
                "position": "dashboard",
                "permissions": [
                    "reviews.view"
                ]
            }
        ],
        "scheduled_tasks": [
            {
                "schedule": "0 10 * * *",
                "handler": "sendReviewRequests",
                "description": "Send review request emails daily"
            },
            {
                "schedule": "0 *\/6 * * *",
                "handler": "calculateRatings",
                "description": "Recalculate product ratings"
            }
        ],
        "templates": [
            {
                "name": "review-widget",
                "file": "templates\/review-widget.twig"
            },
            {
                "name": "review-form",
                "file": "templates\/review-form.twig"
            },
            {
                "name": "email-review-request",
                "file": "templates\/emails\/review-request.twig"
            }
        ],
        "changelog": {
            "1.0.0": [
                "Initial release",
                "Product reviews and ratings",
                "Review moderation system",
                "Rich snippets support",
                "Review incentives",
                "Media uploads",
                "Q&A functionality"
            ]
        }
    },
    "marketplace_info": {
        "category": "social",
        "tags": [
            "social"
        ],
        "compatibility": {
            "php": ">=8.3",
            "shopologic": ">=2.0"
        },
        "pricing": {
            "model": "free",
            "price": 0
        }
    },
    "quality_metrics": {
        "health_score": 0,
        "performance_grade": "B",
        "test_coverage": 40,
        "security_score": 100
    },
    "assets": {
        "icon": "marketplace-assets\/icon.svg",
        "banner": "marketplace-assets\/banner.svg",
        "logo": "marketplace-assets\/logo.svg",
        "screenshots": [
            "marketplace-assets\/screenshots\/screenshot-1.svg",
            "marketplace-assets\/screenshots\/screenshot-2.svg",
            "marketplace-assets\/screenshots\/screenshot-3.svg"
        ]
    }
}