{
    "package_info": {
        "name": "sales-dashboard",
        "version": "1.0.0",
        "package_date": "2025-06-30 19:31:11",
        "package_size": 14456,
        "package_format": "zip"
    },
    "plugin_info": {
        "name": "Sales Performance Dashboard",
        "version": "1.0.0",
        "description": "Advanced sales analytics with real-time reporting, forecasting, and performance insights",
        "author": {
            "name": "Shopologic Team",
            "email": "plugins@shopologic.com"
        },
        "requirements": {
            "php": ">=8.3",
            "core": ">=1.0.0",
            "dependencies": {
                "shopologic\/commerce": "^1.0.0"
            }
        },
        "bootstrap": {
            "class": "SalesDashboardPlugin",
            "file": "SalesDashboardPlugin.php"
        },
        "permissions": [
            "orders.read",
            "analytics.read",
            "reports.generate",
            "hooks.*"
        ],
        "hooks": {
            "actions": [
                "order.completed",
                "admin.dashboard.widgets",
                "reports.scheduled",
                "analytics.updated"
            ]
        },
        "api": {
            "endpoints": [
                {
                    "method": "GET",
                    "path": "\/api\/v1\/analytics\/sales\/overview",
                    "handler": "handleGet"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/analytics\/sales\/trends",
                    "handler": "handleGet"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/analytics\/sales\/forecast",
                    "handler": "handleGet"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/analytics\/reports\/generate",
                    "handler": "handlePost"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/analytics\/products\/performance",
                    "handler": "handleGet"
                }
            ]
        },
        "database": {
            "tables": [
                "sales_metrics",
                "performance_snapshots",
                "sales_forecasts",
                "custom_reports"
            ],
            "migrations": "migrations\/"
        },
        "assets": {
            "js": [
                "assets\/charts.js",
                "assets\/dashboard.js",
                "assets\/reports.js"
            ],
            "css": [
                "assets\/dashboard.css"
            ]
        },
        "config": {
            "schema": {
                "real_time_updates": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable real-time dashboard updates"
                },
                "default_date_range": {
                    "type": "select",
                    "default": "30_days",
                    "options": {
                        "7_days": "Last 7 days",
                        "30_days": "Last 30 days",
                        "90_days": "Last 90 days",
                        "1_year": "Last year"
                    },
                    "description": "Default dashboard date range"
                },
                "enable_forecasting": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable sales forecasting"
                },
                "auto_generate_reports": {
                    "type": "boolean",
                    "default": true,
                    "description": "Auto-generate scheduled reports"
                },
                "report_frequency": {
                    "type": "select",
                    "default": "weekly",
                    "options": {
                        "daily": "Daily",
                        "weekly": "Weekly",
                        "monthly": "Monthly"
                    },
                    "description": "Automated report frequency"
                }
            }
        },
        "autoload": {
            "psr-4": {
                "Shopologic\\Plugins\\SalesDashboard\\": "src\/"
            }
        }
    },
    "marketplace_info": {
        "category": "analytics",
        "tags": {
            "0": "analytics",
            "2": "real-time",
            "3": "performance"
        },
        "compatibility": {
            "php": ">=8.3",
            "shopologic": ">=2.0"
        },
        "pricing": {
            "model": "free",
            "price": 0
        }
    },
    "quality_metrics": {
        "health_score": 0,
        "performance_grade": "B",
        "test_coverage": 40,
        "security_score": 100
    },
    "assets": {
        "icon": "marketplace-assets\/icon.svg",
        "banner": "marketplace-assets\/banner.svg",
        "logo": "marketplace-assets\/logo.svg",
        "screenshots": [
            "marketplace-assets\/screenshots\/screenshot-1.svg",
            "marketplace-assets\/screenshots\/screenshot-2.svg",
            "marketplace-assets\/screenshots\/screenshot-3.svg"
        ]
    }
}