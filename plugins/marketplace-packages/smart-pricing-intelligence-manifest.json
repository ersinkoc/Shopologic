{
    "package_info": {
        "name": "smart-pricing-intelligence",
        "version": "1.0.0",
        "package_date": "2025-06-30 19:31:12",
        "package_size": 19009,
        "package_format": "zip"
    },
    "plugin_info": {
        "name": "Smart Pricing Intelligence",
        "version": "1.0.0",
        "description": "Advanced pricing optimization with competitor monitoring, dynamic pricing algorithms, profit maximization, and real-time market response capabilities for competitive advantage",
        "author": {
            "name": "Shopologic Team"
        },
        "requirements": {
            "php": ">=8.3",
            "core": ">=1.0.0",
            "dependencies": {
                "shopologic\/catalog": "^1.0.0",
                "shopologic\/core": "^1.0.0"
            }
        },
        "autoload": {
            "psr-4": {
                "Shopologic\\Plugins\\SmartPricingIntelligence\\": "src\/"
            }
        },
        "bootstrap": {
            "file": "SmartPricingIntelligencePlugin.php",
            "class": "SmartPricingIntelligencePlugin"
        },
        "permissions": [
            "pricing.view_analytics",
            "pricing.manage_rules",
            "pricing.competitor_monitoring",
            "pricing.price_adjustments",
            "pricing.view_reports",
            "pricing.configure_strategies"
        ],
        "hooks": {
            "actions": [
                "product.before_save",
                "competitor.price_change",
                "inventory.stock_level_change",
                "order.completed",
                "pricing.rule_triggered",
                "pricing.margin_alert"
            ],
            "filters": [
                "product.price",
                "product.sale_price",
                "cart.discount",
                "pricing.rules",
                "analytics.pricing_metrics",
                "catalog.price_display"
            ]
        },
        "api": {
            "endpoints": [
                {
                    "method": "GET",
                    "path": "\/api\/v1\/pricing\/product\/{product_id}\/analysis",
                    "handler": "handleGet"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/pricing\/competitor-prices",
                    "handler": "handleGet"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/pricing\/rules",
                    "handler": "handlePost"
                },
                {
                    "method": "PUT",
                    "path": "\/api\/v1\/pricing\/rules\/{rule_id}",
                    "handler": "handlePut"
                },
                {
                    "method": "DELETE",
                    "path": "\/api\/v1\/pricing\/rules\/{rule_id}",
                    "handler": "handleDelete"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/pricing\/simulate",
                    "handler": "handlePost"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/pricing\/price-history\/{product_id}",
                    "handler": "handleGet"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/pricing\/elasticity-analysis",
                    "handler": "handleGet"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/pricing\/bulk-reprice",
                    "handler": "handlePost"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/pricing\/reports\/{report_type}",
                    "handler": "handleGet"
                }
            ]
        },
        "config": {
            "schema": {
                "pricing_strategies": {
                    "competitive_pricing": true,
                    "value_based_pricing": true,
                    "dynamic_pricing": true,
                    "psychological_pricing": true
                },
                "competitor_monitoring": {
                    "enabled": true,
                    "check_frequency": 1800,
                    "price_match_threshold": 0.05,
                    "auto_adjust": false
                },
                "pricing_rules": {
                    "min_margin": 0.15,
                    "max_discount": 0.5,
                    "price_change_limit": 0.2,
                    "approval_required_threshold": 0.3
                },
                "optimization": {
                    "consider_inventory": true,
                    "consider_seasonality": true,
                    "consider_competition": true,
                    "consider_demand": true
                }
            }
        },
        "widgets": [
            {
                "id": "pricing-alerts-widget",
                "title": "Pricing Alerts & Opportunities",
                "position": "sidebar",
                "priority": 15
            },
            {
                "id": "pricing-dashboard-widget",
                "title": "Pricing Intelligence Dashboard",
                "position": "main",
                "priority": 18
            },
            {
                "id": "competitor-prices-widget",
                "title": "Competitor Price Monitor",
                "position": "main",
                "priority": 22
            }
        ],
        "scheduled_tasks": [
            {
                "schedule": "*\/30 * * * *",
                "description": "Monitor competitor prices"
            },
            {
                "schedule": "*\/15 * * * *",
                "description": "Apply dynamic pricing rules"
            },
            {
                "schedule": "0 * * * *",
                "description": "Calculate price elasticity"
            },
            {
                "schedule": "0 2 * * *",
                "description": "Optimize profit margins"
            },
            {
                "schedule": "0 6 * * MON",
                "description": "Generate weekly pricing report"
            }
        ]
    },
    "marketplace_info": {
        "category": "general",
        "tags": [
            "general",
            "real-time",
            "performance"
        ],
        "compatibility": {
            "php": ">=8.3",
            "shopologic": ">=2.0"
        },
        "pricing": {
            "model": "free",
            "price": 0
        }
    },
    "quality_metrics": {
        "health_score": 0,
        "performance_grade": "A",
        "test_coverage": 40,
        "security_score": 100
    },
    "assets": {
        "icon": "marketplace-assets\/icon.svg",
        "banner": "marketplace-assets\/banner.svg",
        "logo": "marketplace-assets\/logo.svg",
        "screenshots": [
            "marketplace-assets\/screenshots\/screenshot-1.svg",
            "marketplace-assets\/screenshots\/screenshot-2.svg",
            "marketplace-assets\/screenshots\/screenshot-3.svg"
        ]
    }
}