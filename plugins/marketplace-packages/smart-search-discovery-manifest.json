{
    "package_info": {
        "name": "smart-search-discovery",
        "version": "1.0.0",
        "package_date": "2025-06-30 19:31:13",
        "package_size": 22135,
        "package_format": "zip"
    },
    "plugin_info": {
        "name": "smart-search-discovery",
        "version": "1.0.0",
        "description": "AI-powered search with natural language processing, visual search, voice search, and intelligent product discovery",
        "author": {
            "name": "Shopologic"
        },
        "requirements": {
            "php": ">=8.3",
            "core": ">=1.0.0",
            "dependencies": {
                "shopologic\/core": "^1.0"
            }
        },
        "autoload": {
            "psr-4": {
                "Shopologic\\Plugins\\SmartSearchDiscovery\\": "src\/"
            }
        },
        "bootstrap": {
            "class": "SmartSearchDiscoveryPlugin",
            "file": "SmartSearchDiscoveryPlugin.php"
        },
        "permissions": [
            "hooks.search.*",
            "hooks.product.*",
            "api.access",
            "dashboard.widget",
            "cron.execute",
            "search.analytics.view",
            "search.configuration.manage"
        ],
        "hooks": {
            "actions": [
                "search.query",
                "search.results",
                "product.discovery",
                "user.search_behavior",
                "content.index"
            ]
        },
        "api": {
            "endpoints": [
                {
                    "method": "POST",
                    "path": "\/api\/v1\/search\/query",
                    "handler": "handlePost"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/search\/visual",
                    "handler": "handlePost"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/search\/voice",
                    "handler": "handlePost"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/search\/suggestions",
                    "handler": "handleGet"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/search\/analytics",
                    "handler": "handleGet"
                }
            ]
        },
        "config": {
            "schema": {
                "configurable": {
                    "type": "boolean",
                    "default": true
                },
                "api_enabled": {
                    "type": "boolean",
                    "default": true
                },
                "widget_enabled": {
                    "type": "boolean",
                    "default": true
                },
                "search_features": [
                    "nlp",
                    "visual",
                    "voice",
                    "semantic",
                    "faceted"
                ],
                "ai_models": [
                    "bert",
                    "clip",
                    "whisper"
                ]
            }
        },
        "scheduled_tasks": [
            "0 *\/2 * * * - update_search_index",
            "0 1 * * * - train_search_models",
            "0 *\/4 * * * - analyze_search_patterns",
            "0 3 * * SUN - optimize_search_relevance"
        ]
    },
    "marketplace_info": {
        "category": "general",
        "tags": [
            "general"
        ],
        "compatibility": {
            "php": ">=8.3",
            "shopologic": ">=2.0"
        },
        "pricing": {
            "model": "free",
            "price": 0
        }
    },
    "quality_metrics": {
        "health_score": 0,
        "performance_grade": "A",
        "test_coverage": 40,
        "security_score": 100
    },
    "assets": {
        "icon": "marketplace-assets\/icon.svg",
        "banner": "marketplace-assets\/banner.svg",
        "logo": "marketplace-assets\/logo.svg",
        "screenshots": [
            "marketplace-assets\/screenshots\/screenshot-1.svg",
            "marketplace-assets\/screenshots\/screenshot-2.svg",
            "marketplace-assets\/screenshots\/screenshot-3.svg"
        ]
    }
}