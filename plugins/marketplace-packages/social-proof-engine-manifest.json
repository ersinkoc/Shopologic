{
    "package_info": {
        "name": "social-proof-engine",
        "version": "1.0.0",
        "package_date": "2025-06-30 19:31:13",
        "package_size": 22251,
        "package_format": "zip"
    },
    "plugin_info": {
        "name": "Social Proof Engine",
        "version": "1.0.0",
        "description": "Real-time social proof notifications, FOMO triggers, and social validation to boost conversions",
        "author": {
            "name": "Shopologic Team",
            "email": "plugins@shopologic.com"
        },
        "requirements": {
            "php": ">=8.3",
            "core": ">=1.0.0",
            "dependencies": {
                "shopologic\/commerce": "^1.0.0"
            }
        },
        "bootstrap": {
            "class": "SocialProofEnginePlugin",
            "file": "SocialProofPlugin.php"
        },
        "permissions": [
            "orders.read",
            "customers.read",
            "products.read",
            "notifications.send",
            "hooks.*"
        ],
        "hooks": {
            "actions": [
                "order.completed",
                "product.viewed",
                "cart.item_added",
                "customer.registered",
                "frontend.footer"
            ]
        },
        "api": {
            "endpoints": [
                {
                    "method": "GET",
                    "path": "\/api\/v1\/social-proof\/notifications",
                    "handler": "handleGet"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/social-proof\/track-view",
                    "handler": "handlePost"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/social-proof\/stats\/{product_id}",
                    "handler": "handleGet"
                }
            ]
        },
        "database": {
            "tables": [
                "social_proof_events",
                "notification_displays",
                "social_metrics"
            ],
            "migrations": "migrations\/"
        },
        "assets": {
            "js": [
                "assets\/social-proof.js",
                "assets\/notifications.js"
            ],
            "css": [
                "assets\/social-proof.css"
            ]
        },
        "config": {
            "schema": {
                "enable_purchase_notifications": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show recent purchase notifications"
                },
                "enable_visitor_count": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show current visitors viewing products"
                },
                "enable_low_stock_alerts": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show low stock warnings"
                },
                "notification_frequency": {
                    "type": "number",
                    "default": 15,
                    "min": 5,
                    "max": 60,
                    "description": "Seconds between notifications"
                },
                "anonymize_customer_names": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show partial names for privacy"
                },
                "max_notifications_per_page": {
                    "type": "number",
                    "default": 3,
                    "min": 1,
                    "max": 10,
                    "description": "Maximum notifications per page view"
                }
            }
        },
        "autoload": {
            "psr-4": {
                "Shopologic\\Plugins\\SocialProofEngine\\": "src\/"
            }
        }
    },
    "marketplace_info": {
        "category": "social",
        "tags": [
            "social",
            "real-time"
        ],
        "compatibility": {
            "php": ">=8.3",
            "shopologic": ">=2.0"
        },
        "pricing": {
            "model": "free",
            "price": 0
        }
    },
    "quality_metrics": {
        "health_score": 0,
        "performance_grade": "A",
        "test_coverage": 40,
        "security_score": 100
    },
    "assets": {
        "icon": "marketplace-assets\/icon.svg",
        "banner": "marketplace-assets\/banner.svg",
        "logo": "marketplace-assets\/logo.svg",
        "screenshots": [
            "marketplace-assets\/screenshots\/screenshot-1.svg",
            "marketplace-assets\/screenshots\/screenshot-2.svg",
            "marketplace-assets\/screenshots\/screenshot-3.svg"
        ]
    }
}