{
    "package_info": {
        "name": "subscription-commerce",
        "version": "1.0.0",
        "package_date": "2025-06-30 19:31:14",
        "package_size": 22911,
        "package_format": "zip"
    },
    "plugin_info": {
        "name": "Subscription Commerce",
        "version": "1.0.0",
        "description": "Complete subscription management with recurring billing, customer portals, and retention analytics",
        "author": {
            "name": "Shopologic Team",
            "email": "plugins@shopologic.com"
        },
        "requirements": {
            "php": ">=8.3",
            "core": ">=1.0.0",
            "dependencies": {
                "shopologic\/commerce": "^1.0.0"
            }
        },
        "bootstrap": {
            "class": "SubscriptionCommercePlugin",
            "file": "SubscriptionCommercePlugin.php"
        },
        "permissions": [
            "subscriptions.manage",
            "customers.read",
            "orders.create",
            "billing.process",
            "hooks.*"
        ],
        "hooks": {
            "actions": [
                "subscription.created",
                "subscription.renewed",
                "subscription.cancelled",
                "billing.failed",
                "product.subscription_enabled"
            ]
        },
        "api": {
            "endpoints": [
                {
                    "method": "POST",
                    "path": "\/api\/v1\/subscriptions\/create",
                    "handler": "handlePost"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/subscriptions\/{id}",
                    "handler": "handleGet"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/subscriptions\/{id}\/pause",
                    "handler": "handlePost"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/subscriptions\/{id}\/resume",
                    "handler": "handlePost"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/subscriptions\/{id}\/cancel",
                    "handler": "handlePost"
                },
                {
                    "method": "GET",
                    "path": "\/api\/v1\/subscriptions\/customer\/{id}",
                    "handler": "handleGet"
                }
            ]
        },
        "database": {
            "tables": [
                "subscriptions",
                "subscription_plans",
                "billing_cycles",
                "subscription_analytics",
                "dunning_management"
            ],
            "migrations": "migrations\/"
        },
        "assets": {
            "js": [
                "assets\/subscription-management.js",
                "assets\/billing-portal.js"
            ],
            "css": [
                "assets\/subscriptions.css"
            ]
        },
        "config": {
            "schema": {
                "enable_trial_periods": {
                    "type": "boolean",
                    "default": true,
                    "description": "Allow free trial periods"
                },
                "default_trial_days": {
                    "type": "number",
                    "default": 14,
                    "min": 1,
                    "max": 90,
                    "description": "Default trial period in days"
                },
                "enable_plan_changes": {
                    "type": "boolean",
                    "default": true,
                    "description": "Allow customers to change plans"
                },
                "proration_enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable proration for plan changes"
                },
                "failed_payment_retries": {
                    "type": "number",
                    "default": 3,
                    "min": 1,
                    "max": 10,
                    "description": "Number of failed payment retries"
                },
                "dunning_grace_period": {
                    "type": "number",
                    "default": 7,
                    "min": 1,
                    "max": 30,
                    "description": "Grace period before cancellation (days)"
                }
            }
        },
        "autoload": {
            "psr-4": {
                "Shopologic\\Plugins\\SubscriptionCommerce\\": "src\/"
            }
        }
    },
    "marketplace_info": {
        "category": "general",
        "tags": [
            "general",
            "analytics"
        ],
        "compatibility": {
            "php": ">=8.3",
            "shopologic": ">=2.0"
        },
        "pricing": {
            "model": "free",
            "price": 0
        }
    },
    "quality_metrics": {
        "health_score": 0,
        "performance_grade": "A",
        "test_coverage": 40,
        "security_score": 100
    },
    "assets": {
        "icon": "marketplace-assets\/icon.svg",
        "banner": "marketplace-assets\/banner.svg",
        "logo": "marketplace-assets\/logo.svg",
        "screenshots": [
            "marketplace-assets\/screenshots\/screenshot-1.svg",
            "marketplace-assets\/screenshots\/screenshot-2.svg",
            "marketplace-assets\/screenshots\/screenshot-3.svg"
        ]
    }
}