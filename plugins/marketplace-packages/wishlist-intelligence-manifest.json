{
    "package_info": {
        "name": "wishlist-intelligence",
        "version": "1.0.0",
        "package_date": "2025-06-30 19:31:15",
        "package_size": 23365,
        "package_format": "zip"
    },
    "plugin_info": {
        "name": "Wishlist Intelligence",
        "version": "1.0.0",
        "description": "Smart wishlist with price alerts, availability tracking, and intelligent recommendations",
        "author": {
            "name": "Shopologic Team",
            "email": "plugins@shopologic.com"
        },
        "requirements": {
            "php": ">=8.3",
            "core": ">=1.0.0",
            "dependencies": {
                "shopologic\/commerce": "^1.0.0"
            }
        },
        "bootstrap": {
            "class": "WishlistIntelligencePlugin",
            "file": "WishlistIntelligencePlugin.php"
        },
        "permissions": [
            "customers.read",
            "customers.write",
            "products.read",
            "notifications.send",
            "hooks.*"
        ],
        "hooks": {
            "actions": [
                "product.price_changed",
                "product.back_in_stock",
                "customer.dashboard"
            ]
        },
        "api": {
            "endpoints": [
                {
                    "method": "GET",
                    "path": "\/api\/v1\/wishlist",
                    "handler": "handleGet"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/wishlist\/add",
                    "handler": "handlePost"
                },
                {
                    "method": "DELETE",
                    "path": "\/api\/v1\/wishlist\/{id}",
                    "handler": "handleDelete"
                },
                {
                    "method": "POST",
                    "path": "\/api\/v1\/wishlist\/price-alert",
                    "handler": "handlePost"
                }
            ]
        },
        "database": {
            "tables": [
                "wishlists",
                "wishlist_items",
                "price_alerts",
                "wishlist_analytics"
            ],
            "migrations": "migrations\/"
        },
        "assets": {
            "js": [
                "assets\/wishlist.js"
            ],
            "css": [
                "assets\/wishlist.css"
            ]
        },
        "config": {
            "schema": {
                "enable_price_alerts": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable price drop notifications"
                },
                "enable_stock_alerts": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable back-in-stock notifications"
                },
                "smart_recommendations": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show intelligent product recommendations"
                }
            }
        },
        "autoload": {
            "psr-4": {
                "Shopologic\\Plugins\\WishlistIntelligence\\": "src\/"
            }
        }
    },
    "marketplace_info": {
        "category": "general",
        "tags": [
            "general"
        ],
        "compatibility": {
            "php": ">=8.3",
            "shopologic": ">=2.0"
        },
        "pricing": {
            "model": "free",
            "price": 0
        }
    },
    "quality_metrics": {
        "health_score": 0,
        "performance_grade": "A",
        "test_coverage": 40,
        "security_score": 100
    },
    "assets": {
        "icon": "marketplace-assets\/icon.svg",
        "banner": "marketplace-assets\/banner.svg",
        "logo": "marketplace-assets\/logo.svg",
        "screenshots": [
            "marketplace-assets\/screenshots\/screenshot-1.svg",
            "marketplace-assets\/screenshots\/screenshot-2.svg",
            "marketplace-assets\/screenshots\/screenshot-3.svg"
        ]
    }
}