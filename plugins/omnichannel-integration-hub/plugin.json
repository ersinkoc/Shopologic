{
    "name": "omnichannel-integration-hub",
    "version": "1.0.0",
    "description": "Unified commerce platform integrating online store, POS, marketplaces, social commerce, and mobile apps with real-time inventory sync",
    "author": {
        "name": "Shopologic"
    },
    "requirements": {
        "php": ">=8.3",
        "core": ">=1.0.0",
        "dependencies": {
            "shopologic/core": "^1.0"
        }
    },
    "autoload": {
        "psr-4": {
            "Shopologic\\Plugins\\OmnichannelIntegrationHub\\": "src/"
        }
    },
    "bootstrap": {
        "class": "OmnichannelIntegrationHubPlugin",
        "file": "OmnichannelIntegrationHubPlugin.php"
    },
    "permissions": [
        "hooks.order.*",
        "hooks.inventory.*",
        "hooks.customer.*",
        "api.access",
        "dashboard.widget",
        "cron.execute",
        "channels.manage",
        "integrations.configure"
    ],
    "hooks": {
        "actions": [
            "order.created",
            "inventory.updated",
            "product.synced",
            "customer.unified",
            "channel.connected"
        ]
    },
    "api": {
        "endpoints": [
            {
                "method": "GET",
                "path": "/api/v1/omnichannel/channels",
                "handler": "handleGet"
            },
            {
                "method": "POST",
                "path": "/api/v1/omnichannel/sync",
                "handler": "handlePost"
            },
            {
                "method": "GET",
                "path": "/api/v1/omnichannel/inventory",
                "handler": "handleGet"
            },
            {
                "method": "POST",
                "path": "/api/v1/omnichannel/order/route",
                "handler": "handlePost"
            },
            {
                "method": "GET",
                "path": "/api/v1/omnichannel/analytics",
                "handler": "handleGet"
            }
        ]
    },
    "config": {
        "schema": {
            "configurable": {
                "type": "boolean",
                "default": true
            },
            "api_enabled": {
                "type": "boolean",
                "default": true
            },
            "widget_enabled": {
                "type": "boolean",
                "default": true
            },
            "channels": [
                "web",
                "pos",
                "mobile",
                "marketplace",
                "social"
            ],
            "real_time_sync": {
                "type": "boolean",
                "default": true
            }
        }
    },
    "scheduled_tasks": [
        "*/5 * * * * - sync_inventory",
        "*/15 * * * * - sync_orders",
        "0 * * * * - sync_products",
        "0 2 * * * - reconcile_channels"
    ],
    "license": "MIT",
    "homepage": "https://shopologic.com/plugins/omnichannel-integration-hub"
}