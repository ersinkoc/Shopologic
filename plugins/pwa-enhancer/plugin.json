{
    "name": "PWA Enhancer",
    "version": "1.0.0",
    "description": "Progressive Web App features with offline capability, push notifications, and app-like experience",
    "author": {
        "name": "Shopologic Team",
        "email": "plugins@shopologic.com"
    },
    "class": "PWAEnhancer\\PWAEnhancerPlugin",
    "file": "PWAEnhancerPlugin.php",
    "dependencies": {
        "core-commerce": ">=1.0.0"
    },
    "permissions": [
        "customers.read",
        "notifications.send",
        "cache.write",
        "hooks.*"
    ],
    "hooks": [
        "frontend.head",
        "frontend.manifest",
        "service_worker.install",
        "order.completed"
    ],
    "api_endpoints": [
        "GET /api/v1/pwa/manifest",
        "POST /api/v1/pwa/subscribe",
        "POST /api/v1/pwa/notification",
        "GET /api/v1/pwa/offline-data"
    ],
    "database_tables": [
        "pwa_subscriptions",
        "offline_cache",
        "push_notifications"
    ],
    "config_schema": {
        "enable_offline_mode": {
            "type": "boolean",
            "default": true,
            "description": "Enable offline browsing capability"
        },
        "enable_push_notifications": {
            "type": "boolean",
            "default": true,
            "description": "Enable push notifications"
        },
        "cache_duration_hours": {
            "type": "number",
            "default": 24,
            "min": 1,
            "max": 168,
            "description": "Offline cache duration"
        },
        "app_name": {
            "type": "string",
            "default": "Shopologic Store",
            "description": "PWA app name"
        },
        "theme_color": {
            "type": "color",
            "default": "#007cba",
            "description": "PWA theme color"
        }
    },
    "assets": {
        "js": ["assets/service-worker.js", "assets/pwa-installer.js"],
        "css": ["assets/pwa-styles.css"]
    }
}