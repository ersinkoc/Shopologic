{
    "name": "social-commerce-integration",
    "version": "1.0.0",
    "description": "Complete social commerce integration with shoppable posts, influencer management, social proof automation, and multi-platform selling",
    "author": {
        "name": "Shopologic"
    },
    "requirements": {
        "php": ">=8.3",
        "core": ">=1.0.0",
        "dependencies": {
            "shopologic/core": "^1.0"
        }
    },
    "autoload": {
        "psr-4": {
            "Shopologic\\Plugins\\SocialCommerceIntegration\\": "src/"
        }
    },
    "bootstrap": {
        "class": "SocialCommerceIntegrationPlugin",
        "file": "SocialCommerceIntegrationPlugin.php"
    },
    "permissions": [
        "hooks.social.*",
        "hooks.influencer.*",
        "api.access",
        "dashboard.widget",
        "cron.execute",
        "social.manage",
        "influencer.manage"
    ],
    "hooks": {
        "actions": [
            "social.post_created",
            "influencer.campaign_launched",
            "social.engagement_tracked",
            "ugc.content_discovered",
            "social.order_attributed"
        ]
    },
    "api": {
        "endpoints": [
            {
                "method": "GET",
                "path": "/api/v1/social/platforms",
                "handler": "handleGet"
            },
            {
                "method": "POST",
                "path": "/api/v1/social/posts/shoppable",
                "handler": "handlePost"
            },
            {
                "method": "GET",
                "path": "/api/v1/influencers",
                "handler": "handleGet"
            },
            {
                "method": "POST",
                "path": "/api/v1/influencers/campaigns",
                "handler": "handlePost"
            },
            {
                "method": "GET",
                "path": "/api/v1/social/analytics",
                "handler": "handleGet"
            }
        ]
    },
    "config": {
        "schema": {
            "configurable": {
                "type": "boolean",
                "default": true
            },
            "api_enabled": {
                "type": "boolean",
                "default": true
            },
            "widget_enabled": {
                "type": "boolean",
                "default": true
            },
            "features": [
                "shoppable_posts",
                "influencer_management",
                "social_proof",
                "ugc_curation"
            ],
            "platforms": [
                "instagram",
                "facebook",
                "tiktok",
                "youtube",
                "pinterest"
            ]
        }
    },
    "scheduled_tasks": [
        "*/15 * * * * - sync_social_content",
        "0 * * * * - track_social_engagement",
        "0 2 * * * - analyze_influencer_performance",
        "0 4 * * * - curate_ugc_content"
    ],
    "license": "MIT",
    "homepage": "https://shopologic.com/plugins/social-commerce-integration"
}