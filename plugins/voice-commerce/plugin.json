{
    "name": "Voice Commerce",
    "version": "1.0.0",
    "description": "Voice-powered shopping experience using browser Speech Recognition and Text-to-Speech APIs",
    "author": {
        "name": "Shopologic Team",
        "email": "plugins@shopologic.com"
    },
    "class": "VoiceCommerce\\VoiceCommercePlugin",
    "file": "VoiceCommercePlugin.php",
    "dependencies": {
        "core-commerce": ">=1.0.0"
    },
    "permissions": [
        "products.read",
        "cart.write",
        "search.execute",
        "hooks.*"
    ],
    "provides": [
        "VoiceInterfaceInterface",
        "SpeechProcessorInterface"
    ],
    "hooks": [
        "frontend.head",
        "product.search",
        "cart.actions",
        "checkout.navigation"
    ],
    "api_endpoints": [
        "POST /api/v1/voice/process-command",
        "GET /api/v1/voice/commands",
        "POST /api/v1/voice/feedback",
        "GET /api/v1/voice/product-speech/{id}"
    ],
    "database_tables": [
        "voice_commands",
        "voice_interactions", 
        "speech_patterns",
        "voice_preferences"
    ],
    "config_schema": {
        "enable_voice_search": {
            "type": "boolean",
            "default": true,
            "description": "Enable voice search functionality"
        },
        "enable_voice_navigation": {
            "type": "boolean", 
            "default": true,
            "description": "Enable voice navigation commands"
        },
        "enable_product_description_speech": {
            "type": "boolean",
            "default": true,
            "description": "Read product descriptions aloud"
        },
        "voice_feedback": {
            "type": "boolean",
            "default": true,
            "description": "Provide voice feedback for actions"
        },
        "language": {
            "type": "select",
            "default": "en-US",
            "options": {
                "en-US": "English (US)",
                "en-GB": "English (UK)",
                "es-ES": "Spanish",
                "fr-FR": "French",
                "de-DE": "German",
                "it-IT": "Italian"
            },
            "description": "Voice recognition language"
        },
        "voice_speed": {
            "type": "number",
            "default": 1.0,
            "min": 0.5,
            "max": 2.0,
            "step": 0.1,
            "description": "Speech synthesis speed"
        },
        "confidence_threshold": {
            "type": "number",
            "default": 0.7,
            "min": 0.1,
            "max": 1.0,
            "step": 0.1,
            "description": "Minimum confidence for voice recognition"
        }
    },
    "assets": {
        "js": [
            "assets/voice-interface.js",
            "assets/speech-recognition.js", 
            "assets/voice-commands.js"
        ],
        "css": ["assets/voice-ui.css"]
    }
}